@using System.Web.Optimization
@using WebHelpers.Mvc5.Enum
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>
        @if (!string.IsNullOrWhiteSpace(ViewBag.Title))
        {
            @ViewBag.Title
        }
    </title>
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600,700,300italic,400italic,600italic">
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Kanit:wght@200&display=swap" rel="stylesheet">
    @Styles.Render("~/Bundles/css")
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>
<body class="hold-transition" style="font-family: 'Kanit', sans-serif;">
    <div class="my-blue-top" style="height:6rem;width:auto; color: white;">
        <div class="container-m" style="height: 100%;">
            <div class="form-group">
                <div class="pull-left">
                    <img src="~/Content/img/Siamsmilelogo_man.png" style="width: 5rem; height: auto;margin-left: 15px" />
                </div>
                <div class="pull-right" style="margin-top: 40px;margin-right:15px">
                    <strong>@ViewBag.Title</strong>
                </div>
            </div>
        </div>
    </div>

    <div class="container">
        <section class="content">
            @RenderBody()
        </section>
    </div>

    <footer class="my-blue-bottom" style="height:4rem;width:100%;position: fixed;bottom: 0px;z-index: 999; color: white;">
        <div class="container">
            <div class="form-group">
                <div class="pull-left" style="margin:10px">
                    <strong> Call Center โทร 1434</strong>
                </div>

                <div class="pull-right">
                    <a class="btn btn-social-icon" style="margin-top: 2px;" href="https://www.siamsmilebroker.co.th/" target="_blank"><img src="~/Content/img/Website.png" /> </a>
                    <a class="btn btn-social-icon" style="margin-top: 2px;" href="https://line.me/R/ti/p/%40siamsmile" target="_blank"> <img src="~/Content/img/line.png" /></a>
                    <a class="btn btn-social-icon" style="margin-top: 2px;" href="https://www.facebook.com/siamsmilebroker/" target="_blank"><img src="~/Content/img/Facebook.png" /></a>
                    <a class="btn btn-social-icon" style="margin-top: 2px;" href="https://www.youtube.com/channel/UC-x4bdgWZCeYqJO5RBFkg7w" target="_blank"><img src="~/Content/img/Youtube.png" /></a>
                </div>
            </div>
        </div>
    </footer>

    <script src="@RouteJs.RouteJsHandler.HandlerUrl"></script>
    <script src="@EnumHandler.HandlerUrl"></script>
    @Scripts.Render("~/Bundles/js")
    @RenderSection("ViewSpecificJavascript", required: false)
</body>
</html>