@{
    ViewBag.Title = "ตรวจสอบรายละเอียด";
}

<form>
    <div class="row">
        <div class="col-lg-4 ">
            <div class="small-box bg-aqua" style="border-radius:6px;height:100px">
                <div class="inner">
                    <p>Application ID</p>
                    <h4><label id="lblPersonnelApplicationId"></label></h4>
                </div>
                <div class="icon">
                    <i class="fa fa-heartbeat"></i>
                </div>
            </div>
        </div>

        <div class="col-lg-4 ">

            <div class="small-box bg-yellow" style="border-radius: 6px; height: 100px">
                <div class="inner">
                    <p>เลขที่กรมธรรม์</p>
                    <h4><label id="lblPersonnelPolicyNumber"></label></h4>
                </div>
                <div class="icon">
                    <i class="fa fa-list-ul"></i>
                </div>
            </div>
        </div>

        <div class="col-lg-4 ">

            <div class="small-box bg-green" style="border-radius: 6px; height: 100px">
                <div class="inner">
                    <p>สถานะกรมธรรม์</p>
                    <h4><label id="lblPersonnelApplicationStatusName"></label></h4>
                </div>
                <div class="icon">
                    <i class="fa fa-lock"></i>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <div class="box box-primary box-solid">
                <div class="box-header with-border">
                    <h3 class="box-title">ข้อมูลกรมธรรม์</h3>
                </div>
                <div class="box-body">

                    <div class="row" style="padding-top:2%">
                        <div class="col-lg-4">
                            <label>สถานศึกษา :</label>
                            <span class="text-blue" id="lblPersonnelApplicationName"> </span>
                        </div>
                        <div class="col-lg-4">
                            <label>แผนประกัน PA ยิ้มแฉ่ง :</label>
                            <span class="text-blue" id="lblPersonnelProductName"></span>
                        </div>
                        <div class="col-lg-4">
                            <label>ทุนประกัน PA ยิ้มแฉ่ง :</label>
                            <span class="text-blue" id="lblPersonnelSumPremiumAmount"></span>
                        </div>

                    </div>
                    <hr style=" border-top: 2px solid rgba(0, 0, 0, 0.2);" />
                    <div class="row">
                        <div class="col-lg-4">
                            <label>ปีการศึกษา :</label>
                            <span class="text-blue" id="lblPAYear"></span>
                        </div>
                        <div class="col-lg-4">
                            <label>จังหวัด :</label>
                            <span class="text-blue" id="lblPAProvince"></span>
                        </div>
                        <div class="col-lg-4">
                            <label>สาขา :</label>
                            <span class="text-blue" id="lblPABranch"></span>
                        </div>
                    </div>

                    <div class="row" style="padding-top:1.5%">
                        <div class="col-lg-4">
                            <label>วันเริ่มคุ้มครอง :</label>
                            <span class="text-blue" id="lblPAStartCoverDate"></span>
                        </div>
                        <div class="col-lg-4">
                            <label>วันที่มีผลบังคับ :</label>
                            <span class="text-blue" id="lblPAEffectiveDate"></span>
                        </div>
                        <div class="col-lg-4">
                            <label>วันสิ้นสุดคุ้มครอง :</label>
                            <span class="text-blue" id="lblPAEndCoverDate"></span>
                        </div>

                    </div>


                    <div class="row" style="padding-top:1.5%">
                        <div class="col-lg-4">
                            <label>เลข App PA นักเรียน :</label>
                            <a href="" id="urlPA" target="_blank"><u><span class="text-blue" id="lblPAAppId"></span></u></a>
                        </div>
                        <div class="col-lg-4">
                            <label>แผนประกัน PA นักเรียน :</label>
                            <span class="text-blue" id="lblPAProductName"></span>
                        </div>
                        <div class="col-lg-4">
                            <label>ทุนประกัน PA นักเรียน :</label>
                            <span class="text-blue" id="lblPAPremium"></span>
                        </div>
                    </div>

                    <div class="row" style="padding-top:1.5%">
                        <div class="col-lg-4">
                            <label>สถานะกรมธรรม์ PA นักเรียน :</label>
                            <span class="text-blue" id="lblPAStatus"></span>
                        </div>
                        <div class="col-lg-4">
                            <label>จำนวน นักเรียน/ครูฟรี/ครูซื้อ :</label>
                            <span class="text-blue" id="lblPACount"></span>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <div class="box box-primary box-solid">
                <div class="box-header with-border" style="padding-top:-1%">
                    <h3 class="box-title">รายชื่อผู้เอาประกัน</h3>
                </div>
                <div class="box-body">

                    <table id="dtCustomer" class="table table-bordered table-hover dataTable" style="width:100%;"></table>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-4"></div>
        <div class="col-lg-2 col-xs-6">
            <button type="button" id="btnReject" class="btn btn-danger btn-block"> ไม่อนุมัติ </button>
        </div>
        <div class="col-lg-2 col-xs-6">
            <button type="button" id="btnApprove" class="btn btn-success btn-block"> อนุมัติ </button>
        </div>

    </div>
    <br />
</form>

<!-- Modal -->
<div class="modal fade" id="mdReject" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header" style="background-color:#df5151">
                <h4 class="modal-title" id="exampleModalLabel" style="color:#ffffff">ไม่อนุมัติออกกรมธรรม์</h4>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-lg-12">
                        <label>สาเหตุการไม่อนุมัติ <b class="text-red">*</b> :</label>
                        <select class="form-control select2" style="width:100%" id="ddlApproveCause">
                            <option value="-1">---โปรดระบุ---</option>
                            @{
                                foreach (var item in ViewBag.ApproveCause)
                                {
                                    <option value="@item.ApproveCauseId">@item.ApproveCause</option>
                                }
                            }
                        </select>
                    </div>
                </div>
                <div class="row" style="padding-top:1%">
                    <div class="col-lg-12">
                        <label>หมายเหตุ <b class="text-red">*</b> :</label>
                        <textarea rows="5" id="txtRemark" class="form-control"></textarea>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <div class="row">
                    <div class="col-lg-1 col-xs-2">
                        <button type="button" class="btn btn-secondary " data-dismiss="modal">ยกเลิก</button>
                    </div>
                    <div class="col-lg-9 col-xs-7"></div>
                    <div class="col-lg-1 col-xs-2">
                        <button type="button" class="btn btn-primary" id="btnUnApproveUpdate">บันทึก</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <input type="hidden" id="hdfAppId" value="" hidden />
    <input type="hidden" id="hdfUrlPA" value="" hidden />
</div>


@section ViewSpecificJavascript
{
    <script type="text/javascript">
        $(document).ready(function () {
            var chat = $.connection.myHub;

            //Start Connection
            $.connection.hub.start().done(function () {
                //อนุมัติ
                const UpdateApplicationRoundApprove = () => {
                    $.ajax({
                        type: "GET",
                        url: "@Url.Action("DoUpdateApprovePersonnelApplication", "PAPersonnelApprove")",
                        //มี 2 Case คือ 1. ถ้าอนุมัติส่งไปแค่ appRoundId ,approveStatusId 2. ถ้าไม่อนุมัตื ส่งเพิ่มไป 2 ตัว appRoundId ,approveStatusId ,approveCauseId(เพิ่ม),approveRemark(เพิ่ม)
                        data: {
                            appRoundId: roundID,
                            roundStatusId: 4 ,
                        },
                        dataType: "json",
                        success: function (d) {

                            if (d[0] == "True") {
                                chat.server.sendNotice("", "");
                                //หลังจากอัพเดทสำเร็จให้ปิดจอไปเลย
                                window.swal({
                                    title: d[2],
                                    type: 'success',
                                    //text: 'RefNo : ' + response,
                                    showCancelButton: false,
                                    confirmButtonColor: '#26A65B',
                                    confirmButtonText: 'ตกลง',
                                    closeOnEsc: false
                                }, function () {
                                    window.close();
                                }, setTimeout(1500));
                            }
                            else {
                                swal("", d[2], "error");
                            }
                        }
                    });
                }

                //ไม่อนุมัติ
                 const UpdateApplicationRoundUnApprove = () => {
                    $.ajax({
                        type: "GET",
                        url: "@Url.Action("DoUpdateApprovePersonnelApplication", "PAPersonnelApprove")",
                        //มี 2 Case คือ 1. ถ้าอนุมัติส่งไปแค่ appRoundId ,approveStatusId 2. ถ้าไม่อนุมัตื ส่งเพิ่มไป 2 ตัว appRoundId ,approveStatusId ,approveCauseId(เพิ่ม),approveRemark(เพิ่ม)
                        data: {
                            appRoundId: roundID,
                            roundStatusId: 5,
                            approveCauseId:  $('#ddlApproveCause').val(),
                            approveRemark:  $('#txtRemark').val()
                        },
                        dataType: "json",
                        async: false,
                        success: function (d) {

                            if (d[0] == "True") {
                                chat.server.sendNotice("", "");
                                //หลังจากอัพเดทสำเร็จให้ปิดจอไปเลย
                                window.swal({
                                    title: d[2],
                                    type: 'success',
                                    //text: 'RefNo : ' + response,
                                    showCancelButton: false,
                                    confirmButtonColor: '#26A65B',
                                    confirmButtonText: 'ตกลง',
                                    closeOnEsc: false
                                }, function () {
                                    window.close();
                                }, setTimeout(1500));
                            }
                            else {
                                swal("", d[2], "error");
                            }
                        }
                    });
                }

                chat.server.joinGroup(@ViewBag.userID);

                //Event ปุ่ม อนุมัติ
                $('#btnApprove').click(function (e) {
                    e.preventDefault();
                    swal({
                        title: "",
                        text: "ยืนยันการอนุมัติหรือไม่ ?",
                        type: "warning",
                        showCancelButton: true,
                        confirmButtonClass: "btn-danger",
                        confirmButtonText: "ยืนยัน",
                        cancelButtonText: "ยกเลิก",
                        closeOnConfirm: false,
                        closeOnCancel: false
                    },
                        function (isConfirm) {
                            if (isConfirm) {
                                UpdateApplicationRoundApprove()
                            }
                            else {
                                swal("ยกเลิกทำรายการ", "", "error");
                            }
                        }
                    );
                });

                //Event ปุ่ม บันทึก ไม่อนุมัติ
                $('#btnUnApproveUpdate').click(function (e) {
                    e.preventDefault();
                    if ($('#ddlApproveCause').val() === -1 || $('#txtRemark').val() === "") {
                        swal("กรอกข้อมูลไม่ครบ", "กรุณาเลือก สาเหุตและหมายเหตุ", "warning");
                    }
                    else {
                        swal({
                            title: "",
                            text: "ยืนยันการไม่อนุมัติหรือไม่ ?",
                            type: "warning",
                            showCancelButton: true,
                            confirmButtonClass: "btn-danger",
                            confirmButtonText: "ยืนยัน",
                            cancelButtonText: "Close",
                            closeOnConfirm: false,
                            closeOnCancel: false
                        },
                            function (isConfirm) {
                                if (isConfirm) {
                                    //appRoundId ,approveStatusId ,approveCauseId(เพิ่ม),approveRemark(เพิ่ม)
                                    UpdateApplicationRoundUnApprove()
                                }
                                else {
                                    swal("ยกเลิกทำรายการ", "", "error");
                                }
                            }
                        );
                    }

                });
            });
        });

        //-------------------------------------------------------------------------Global variables -------------------------------------------------------------------------------
        var roundID = '@ViewBag.RoundId'

        $(function () {

            $('.select2').select2();

            //1. รับ RoundId มาจาก URL แล้ว GetApplicationRoundDetailByRoundId , PAPersonnelApprove เพื่อเอา เลข AppId
            DoGetApplicationDetail();

        });

        //Event ปุ่ม ไม่อนุมัติ เปิด Modal
        $('#btnReject').click(function (e) {
            e.preventDefault();
            $('#mdReject').modal('show')
        });

        //ใช้ RoundID หา appId
        const DoGetApplicationDetail = () => {

            $.ajax({
                type: "GET",
                url: "@Url.Action("GetApplicationRoundDetailByRoundId", "PAPersonnelApprove")",
                data: {
                    appRoundId: roundID
                },
                async: false,
                dataType: "json",
                success: function (res) {

                    $('#hdfAppId').val(res.PersonnelApplicationId);

                    //2. นำเลข AppId ไปหาข้อมูล Card ข้างบน และ Box ข้อมูลกรมธรรม์ ส่วนหัว
                    //3. ใช้ AppId,RoundId Get Table PersonnelCustomerDetail
                    if (res.PersonnelApplicationId !== null) {
                        DoGetPersonnelApplicationDetail(res.PersonnelApplicationId);
                        DoGetCustomerDetail();
                    }
                }
            });

        }

        //ข้อมูล PAPersonnelApp
        const DoGetPersonnelApplicationDetail = (appId) => {
            $.ajax({
                type: "GET",
                url: "@Url.Action("GetPAApplicationDetailByAppID", "PAPersonnel")",
                data: {
                    appId: appId
                },
                async: false,
                dataType: "json",
                success: function (res) {

                    $('#lblPAYear').text(res.PAYear)
                    $('#lblPABranch').text(res.BranchName)

                    $('#lblPersonnelApplicationId').text(res.PersonnelApplicationCode);
                    $('#lblPersonnelPolicyNumber').text(res.PolicyNo)
                    $('#lblPersonnelApplicationStatusName').text(res.PersonnelApplicationStatusName);
                    $('#lblPersonnelApplicationName').text(res.PersonnelApplicationName);
                    $('#lblPersonnelProductName').text(res.ProductName);
                    $('#lblPersonnelSumPremiumAmount').text(res.MaxCover.toLocaleString(navigator.language, { minimumFractionDigits: 0 }));
                     //4. นำเลข AppCode ไปหาข้อมูล  Box ข้อมูลกรมธรรม์ ส่วนข้อมูลของ PA
                    if (res.RefApplicationCode !== null) {
                        DoGetPAApplicationDetail(res.RefApplicationCode);
                    }
                }
            });
        }

        //ข้อมูลกรมธรรม์ PA
        const DoGetPAApplicationDetail = (appCode) => {
            $.ajax({
                type: "GET",
                url: "@Url.Action("GetSchoolDetail", "PAPersonnel")",
                data: {
                    appCode: appCode
                },
                async: false,
                dataType: "json",
                success: function (res) {

                    let d_startCoverDate = moment(res.StartCoverDate).add(543, 'years').format("DD/MM/YYYY");
                    let d_effectiveDate = moment(res.EffectiveDate).add(543, 'years').format("DD/MM/YYYY");
                    let d_endCoverDate = moment(res.EndCoverDate).add(543, 'years').format("DD/MM/YYYY");
                    var count = res.Student + " / " + res.Free + " / " + res.Buy;

                    //assign link SSS to hiddenFeild
                    $('#urlPA').attr('href', res.UrlPA);

                    $('#lblPAProvince').text(res.Province)

                    $('#lblPAStartCoverDate').text(d_startCoverDate)
                    $('#lblPAEffectiveDate').text(d_effectiveDate)
                    $('#lblPAEndCoverDate').text(d_endCoverDate)

                    $('#lblPAAppId').text(res.ApplicationCode)
                    $('#lblPAProductName').text(res.ProductName)
                    $('#lblPAPremium').text(res.StandardCoverage.toLocaleString(navigator.language, {minimumFractionDigits:0}))

                    $('#lblPAStatus').text(res.ApplicationStatusName)
                    $('#lblPACount').text(count)

                }
            })
        }

        //table
        const DoGetCustomerDetail = () => {


            $('#dtCustomer').empty();

            $('#dtCustomer').DataTable({
                pageLength: 10,
                processing: true,
                serverSide: true,
                responsive: true,
                destroy: true,
                searching: false,
                async: false,
                ajax: {
                    url: '@Url.Action("GetPersonnelCustomerDetail", "PAPersonnelApprove")',
                    type: 'POST',
                    data: function (d) {

                        d.draw = d.draw;
                        d.pageSize = d.length;
                        d.indexStart = d.start;
                        d.sortField = d.columns[d.order[0].column].data;
                        d.orderType = d.order[0].dir;
                        d.searchDetail = null;
                        d.appId = $('#hdfAppId').val();
                        d.appRoundId = roundID;
                    }
                },
                columns: [

                    { title: 'Memder ID', data: 'PersonnelCustomerDetailCode', className: 'h-dt-center d-dt-center',},
                    { title: 'ชื่อ-นามสกุล', data: 'PersonnelCustomerName', className: 'h-dt-center d-dt-center', },
                    { title: 'รหัสประจำตัวประชาชน', data: 'IdCardNumber', className: 'h-dt-center d-dt-center'} ,
                    { title: 'Passport/อื่นๆ', data: 'PassPortNumber', className: 'h-dt-center d-dt-center',},

                    { title: 'ตำแหน่ง', data: 'Position',  className: 'h-dt-center d-dt-center', },
                    { title: 'เบอร์โทร', data: 'MobileNumber',  className: 'h-dt-center d-dt-center', },

                ],

            });
        }
    </script>
}