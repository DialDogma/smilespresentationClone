@model SmileSPACommunity.Models.usp_EndorsePersonnelCustomerDetailItem_Select_Result
@{
    Layout = null;
}


<div class="modal-content" style="border-radius:10px">
    <div class="modal-header box-primary">
        <h4 class="modal-title" id="exampleModalLabel"> แก้ไขรายชื่อผู้เอาประกัน</h4>
    </div>
    <div class="modal-body">


        <form id="form-validate" class="form-horizontal"
              asp-antiforgery="true"
              data-bv-message="This value is not valid"
              data-bv-feedbackicons-valid="glyphicon glyphicon-ok"
              data-bv-feedbackicons-invalid="glyphicon glyphicon-remove"
              data-bv-feedbackicons-validating="glyphicon glyphicon-refresh">
            <fieldset>
                <div class="row">
                    <div class="col-lg-6">

                        @*----left----*@
                        <strong> Member ID: @Model.PersonnelCustomerDetailCode  </strong>
                        <hr />
                        <div class="form-group">
                            <div class="col-lg-12">
                                <input type="radio" value="1" name="card-type" class="card-type" @(Model.ToIdCard == null ? "" : "checked") required /> รหัสประจำตัวประชาชน :
                            </div>
                            <div class="col-lg-12">
                                <input type="number" name="ToIdCard" id="ToIdCard" value="@Model.ToIdCard" class="form-control " maxlength="13"  @(Model.ToPassport != null ? "disabled" : "")>
                            </div>
                            <div class="col-lg-6">
                                <label class="control-label ">คำนำหน้า</label>

                                @Html.DropDownList("ToTitleId", (IEnumerable<SelectListItem>)ViewBag.Titles, "--- กรุณาเลือกข้อมูล ---", new { @style = "width:100%", @class = "form-control", @required = (string)null })

                            </div>
                            <div class="col-lg-6">
                                <label class="control-label">ชื่อ</label>
                                <input type="text" name="ToFirstName" value="@Model.ToFirstName" class="form-control" required />
                            </div>
                            <div class="col-lg-12">
                                <label class="control-label"> ตำแหน่ง</label>
                                <input type="text" name="ToPosition" value="@Model.ToPosition" class="form-control" required />
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-6">

                        @*----right ----*@

                        <strong> สถานะผู้เอาประกัน :@Model.ToPassport </strong>
                        <hr />
                        <div class="form-group">
                            <div class="col-lg-12">
                                <input type="radio" name="card-type" class="card-type" value="2" @(Model.ToPassport == null ? "" : "checked") /> Passport / อื่นๆ
                            </div>
                            <div class="col-lg-12">
                                <input type="text" name="ToPassport" id="ToPassport" class="form-control" value="@Model.ToPassport" @(Model.ToIdCard != null ? "disabled" : "")>
                            </div>
                            <div class="col-lg-12">
                                <label class="control-label"> นามสกุล</label>
                                <input type="text" name="ToLastName" value="@Model.ToLastName" class="form-control" required />
                            </div>
                            <div class="col-lg-12">
                                <label class="control-label"> เบอร์โทรศัพท์</label>
                                <input type="number" name="ToMobileNumber" value="@Model.ToMobileNumber" class="form-control" maxlength="10" required />
                            </div>
                        </div>
                    </div>
                </div>
            </fieldset>

            <input type="hidden" name="EndorsePersonnelCustomerDetailItemId" value="@Model.EndorsePersonnelCustomerDetailItemId" />
            <input type="hidden" name="EndorsePersonnelCustomerDetailHeaderId" value="@ViewBag.EndorsePersonnelCustomerDetailHeaderId" />

            <div class="form-actions">
                <div class="row">
                    <div class="col-md-12 text-center">
                        <button type="button" class="btn btn-danger" data-dismiss="modal">ยกเลิก</button>
                        <button type="submit" class="btn btn-success" id="submit">บันทึก</button>
                    </div>
                </div>
            </div>

        </form>

    </div>
    <div class="modal-footer">
        <div class="row"> </div>
    </div>
</div>

