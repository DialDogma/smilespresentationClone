@model SmileSPACommunity.Models.usp_EndorsePersonnelCustomerDetailItemById_Select_Result
@{
    Layout = null;
}

<div class="modal-content" style="border-radius:10px">
    <div class="modal-header box-primary">
        <h4 class="modal-title " id="exampleModalLabel"> แก้ไขรายชื่อผู้เอาประกัน</h4>
    </div>
    <div class="modal-body">
        <div class="row" style="margin-bottom:10px;">
            <div class="col-lg-12">
                <strong>MemberId :</strong> @Model.PersonnelCustomerDetailCode
            </div>
            <div class="col-lg-12">
                <strong>สถานะ: </strong> แก้ไขผู้เอาประกัน
            </div>
            <div class="col-lg-12">
                <strong>วันที่ทำรายการ: </strong> @Convert.ToDateTime(Model.CreatedDate).ToString("dd/MM/")@(Convert.ToDateTime(Model.CreatedDate).Year + 543)
            </div>
        </div>
        <div class="table-responsive">
            <table class="table table-bordered" id="responseDataTable" style="width:100%;">
                <thead>
                    <tr>
                        <th class="text-center" style="width:20%"> ชื่อรายการ</th>
                        <th> เดิม</th>
                        <th> ใหม่</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td class="text-right"> <strong> คำนำ:</strong></td>
                        <td> @Model.FromTitle </td>
                        <td style="color:@(Model.FromTitle != Model.ToTitle ? "red" : "")"> @Model.ToTitle</td>
                    </tr>
                    <tr>
                        <td class="text-right"><strong> ชื่อ:</strong></td>
                        <td> @Model.FromFirstName </td>
                        <td style="color:@(Model.FromFirstName != Model.ToFirstName ? "red" : "")"> @Model.ToFirstName</td>
                    </tr>
                    <tr>
                        <td class="text-right"> <strong> นามสกุล:</strong></td>
                        <td> @Model.FromLastName </td>
                        <td style="color:@(Model.FromLastName != Model.ToLastName ? "red" : "")"> @Model.ToLastName</td>
                    </tr>
                    <tr>
                        <td class="text-right"> <strong> เลขบัตร:</strong></td>
                        <td> @Model.FromIdCard</td>
                        <td style="color:@(Model.FromIdCard != Model.ToIdCard ? "red" : "")"> @Model.ToIdCard</td>
                    </tr>
                    <tr>
                        <td class="text-right"> <strong> Passport:</strong></td>
                        <td> @Model.FromPassport </td>
                        <td style="color:@(Model.FromPassport != Model.ToPassport ? "red" : "")"> @Model.ToPassport</td>
                    </tr>
                    <tr>
                        <td class="text-right"> <strong> ตำแหน่ง:</strong></td>
                        <td> @Model.FromPosition </td>
                        <td style="color:@(Model.FromPosition != Model.ToPosition ? "red" : "")"> @Model.ToPosition</td>
                    </tr>
                    <tr>
                        <td class="text-right"> <strong> เบอร์โทร:</strong></td>
                        <td> @Model.FromMobileNumber </td>
                        <td style="color:@(Model.FromMobileNumber != Model.ToMobileNumber ? "red" : "")"> @Model.ToMobileNumber</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
    <div class="modal-footer">
        <div class="row col-lg-12">
            <button type="button" class="btn btn-danger" data-dismiss="modal"> ปิด</button>
        </div>
    </div>
</div>

