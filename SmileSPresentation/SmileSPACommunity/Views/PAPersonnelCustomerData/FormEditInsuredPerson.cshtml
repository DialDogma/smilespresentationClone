@model SmileSPACommunity.Models.usp_PersonnelCustomerDetailById_Select_Result
@{
    Layout = null;
}


<div class="modal-content" style="border-radius:10px">
    <div class="modal-header box-primary">
        <h4 class="modal-title" id="exampleModalLabel"> แก้ไขรายชื่อผู้เอาประกัน</h4>
    </div>
    <div class="modal-body">


        <form id="form-validate" class="form-horizontal"
              asp-antiforgery="true"
              data-bv-message="This value is not valid"
              data-bv-feedbackicons-valid="glyphicon glyphicon-ok"
              data-bv-feedbackicons-invalid="glyphicon glyphicon-remove"
              data-bv-feedbackicons-validating="glyphicon glyphicon-refresh">
            <fieldset>
                <div class="row">
                    <div class="col-lg-6">

                        @*----left----*@
                        <strong> Member ID: @Model.PersonnelCustomerDetailCode</strong>
                        <hr />
                        <div class="form-group">
                            <div class="col-lg-12">
                                <input type="radio" value="1" name="card-type" class="card-type" @(Model.IdCardNumber != "" ? "checked" : "") required /> รหัสประจำตัวประชาชน :
                            </div>
                            <div class="col-lg-12">
                                <input type="number" name="IdCardNumber"  id="IdCardNumber" value="@Model.IdCardNumber" class="form-control" maxlength="13" @(Model.IdCardNumber != "" ? "required" : "") @(Model.PassPortNumber != "" ? "disabled" : "")>
                            </div>
                            <div class="col-lg-6">
                                <label class="control-label ">คำนำหน้า</label>

                                @Html.DropDownList("TitleId", (IEnumerable<SelectListItem>)ViewBag.Titles, "--- กรุณาเลือกข้อมูล ---", new { @style = "width:100%", @class = "form-control", @required = (string)null })

                            </div>
                            <div class="col-lg-6">
                                <label class="control-label">ชื่อ</label>
                                <input type="text" name="FirstName" value="@Model.FirstName" class="form-control" required />
                            </div>
                            <div class="col-lg-12">
                                <label class="control-label"> ตำแหน่ง</label>
                                <input type="text" name="Position" value="@Model.Position" class="form-control" required />
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-6">

                        @*----right ----*@

                        <strong> สถานะผู้เอาประกัน : @Model.PersonnelCustomerDetailStatusName</strong>
                        <hr />
                        <div class="form-group">
                            <div class="col-lg-12">
                                @*@(Model.PassPortNumber == null || Model.PassPortNumber == "" ? "" : "required")*@
                                <input type="radio" name="card-type" value="2" class="card-type" @(Model.PassPortNumber == null || Model.PassPortNumber == "" ? "" : "checked") @Model.PassPortNumber /> Passport / อื่นๆ
                            </div>
                            <div class="col-lg-12">
                                <input type="text" name="passportNumber" id="passportNumber" class="form-control" value="@Model.PassPortNumber" @(Model.IdCardNumber != "" ? "disabled" : "")>
                            </div>
                            <div class="col-lg-12">
                                <label class="control-label"> นามสกุล</label>
                                <input type="text" name="LastName" value="@Model.LastName" class="form-control" required />
                            </div>
                            <div class="col-lg-12">
                                <label class="control-label"> เบอร์โทรศัพท์ </label>
                                <input type="number" name="MobileNumber" value="@Model.MobileNumber" 
                                       class="form-control"  
                                       maxlength="10"
                                       min="10"
                                       required  />
                            </div>
                        </div>
                    </div>
                </div>
            </fieldset>

            <input type="hidden" name="PersonnelCustomerDetailId" value="@Model.PersonnelCustomerDetailId" />
            <input type="hidden" name="EndorsePersonnelCustomerDetailHeaderId" value="@ViewBag.EndorsePersonnelCustomerDetailHeaderId" />
            <input type="hidden" name="PersonnelCustomerDetailCode" value="@Model.PersonnelCustomerDetailCode" />

            <div class="form-actions">
                <div class="row">
                    <div class="col-md-12 text-center">
                        <button type="button" class="btn btn-danger" data-dismiss="modal">ยกเลิก</button>
                        <button type="submit" class="btn btn-success" id="submit">บันทึก</button>
                    </div>
                </div>
            </div>

        </form>

    </div>
    <div class="modal-footer">
        <div class="row"> </div>
    </div>
</div>

