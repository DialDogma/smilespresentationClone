@model SmileSMobileWebUI.Models.CaptchaModel
@{
    ViewBag.Title = "ResetPassword";
    Layout = "~/Views/Shared/_EmptyLayout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    @Html.AntiForgeryToken()

    <fieldset>
        <legend>Reset รหัสผ่าน</legend>
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12 col-lg-12">
                    <div class="form-group form-group-lg">
                        <label class="control-label col-md-3 col-lg-3" style="text-align: right">EmpCode:</label>

                        <div class="col-md-3 col-lg-6">
                            @Html.TextBoxFor(Model => Model.EmpCode, htmlAttributes: new { @required = "required" })
                            @Html.ValidationMessageFor(Model => Model.EmpCode)
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Button -->
        <div class="row">
            <div class="col-md-12 col-lg-12">
                <div class="form-group form-group-lg">
                    <div class="col-md-8" style="text-align: center">
                        <button id="btnOTP" type="submit" name="btnOTP" class="btn btn-info">ดำเนินการต่อ</button>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12 col-lg-12">
                <div class="form-group form-group-lg" style="text-align: center">
                    @if (ViewBag.Message != null)
                    {
                        <div style="border: 1px solid rgb(141, 27, 27); width: 300px; padding: 5px;">
                            @ViewBag.Message
                        </div>
                    }
                </div>
            </div>
        </div>
    </fieldset>
}