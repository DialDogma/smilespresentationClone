@{
    ViewBag.Title = "Error";
    Layout = "~/Views/Shared/_LayoutForTopIndex.cshtml";
}

<div class="error-page">
    <h2 class="headline text-red">500</h2>

    <div class="error-content">
        <h3><i class="fa fa-warning text-red"></i> Oops! Something went wrong.</h3>
        @if (ViewBag.MsgInternalServerError == null)
        {
            <p>
                There was an error processing your request.Please, try again.< br>
                If the problem persists, contact support.
            </p>
        }
        else
        {
            <p>
                @ViewBag.MsgInternalServerError
            </p>
        }

        <a href="@Url.Action("Index", "Portal")" class="btn btn-default" role="button">Home</a>
    </div>
</div>