@{
    ViewBag.Title = "รายงานโยกคิวงาน";
    Layout = "~/Views/Shared/_LayoutForTopIndexPHReport.cshtml";
}

<div class="row" style="margin-top: 25px">
    <div class="col-sm-12 col-md-12">
        <div class="col-sm-12 col-md-6">
            <div class="box box-success">
                <div class="box-body">
                    <div class="form-group row">
                        <div class="box-header">
                            <h4 class="text-center">รายงานโยกคิวงาน</h4>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-sm-12 col-md-offset-3 col-md-6">
                            <button type="button" id="btnDownload" class="btn btn-block btn-success">Export to Excel</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section ViewSpecificJavascript
    {
    <script type="text/javascript">
        $(function () {
            $('#btnDownload').click(function (e) {
                e.preventDefault();
                getDownloadLink();
            });
        });

        const getDownloadLink = () => {
            window.location.href = `@Url.Action("ExportReportQueueManualAssign", "Report")`;
        }
    </script>
}