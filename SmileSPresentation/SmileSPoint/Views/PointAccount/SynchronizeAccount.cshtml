@{
    ViewBag.Title = "Sync ข้อมูลกับ SSS";
}

<form class="form-horizontal" id="form1" action="@Url.Action("SynchronizeAccount")" method="post" enctype="multipart/form-data">

    @if (!String.IsNullOrEmpty(ViewBag.Result))
    {
        <div class="alert alert-success alert-dismissible">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
            <h4><i class="icon fa fa-check"></i> ผลการทำงาน </h4>
            @ViewBag.Result
        </div>
    }

    <!-- /.box-body -->
    <div class="box-footer">
        <button type="submit" class="col-sm-offset-2 btn btn-primary" onclick="waitingDialog.show('กำลังดำเนินการ กรุณารอสักครู่');setTimeout(function () {waitingDialog.hide();}, 100000);"><i class="fa fa-floppy-o"></i> ดำเนินการ </button>
        <a href="@Url.Action("Index")" class="btn btn-danger"><i class="fa fa-times"></i> Cancel</a>
    </div>
    <!-- /.box-footer -->
</form>