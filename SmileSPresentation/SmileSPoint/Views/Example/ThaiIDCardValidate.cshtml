@{
    ViewBag.Title = "ThaiIDCardValidate";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>ThaiIDCardValidate</h2>

@if (!String.IsNullOrEmpty(ViewBag.PostValue))
{
    <H1>@ViewBag.PostValue</H1>
}

<!-- form start -->
<form class="form-horizontal" id="form1" action="@Url.Action("ThaiIDCardValidate")" method="post" enctype="multipart/form-data">

    <div class="form-group col-md-4" id="grp-id-card">
        <label>Required Card ID</label>
        <input type="text" class="form-control" maxlength="13" name="id-card-required" required="required" checkID="checkID" id="id-card-required">
    </div>

    <div class="form-group col-md-4" id="grp-id-card">
        <label>Card ID</label>
        <input type="text" class="form-control" maxlength="13" min="13" name="id-card" checkID="checkID" id="id-card">
    </div>

    <!-- /.box-body -->
    <div class="box-footer">
        <button type="submit" class="col-sm-offset-2 btn btn-primary"><i class="fa fa-floppy-o"></i> Submit</button>
    </div>
    <!-- /.box-footer -->
</form>

@section ViewSpecificJavascript
{
    <script>
        $(function () {
        });
    </script>
}