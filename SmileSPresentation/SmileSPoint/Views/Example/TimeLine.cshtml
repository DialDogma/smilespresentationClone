@{
    ViewBag.Title = "TimeLine";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>TimeLine</h2>

<div>
    <ul class="timeline">
        @foreach (var item in ViewBag.TimelineData)
        {

            if (item.TransType == "Pay")
            {
                <!-- timeline item -->
                <li>
                    <!-- timeline icon -->
                    <i class="fa fa-dollar bg-green"></i>
                    <div class="timeline-item ">
                        <div class="box box-default">
                            <div class="box-header with-border">
                                <h3 class="box-title">ชำระเบี้ย</h3>
                                <span class=""><a class="btn btn-success btn-xs">@item.CashReceiveId</a></span>
                                <div class="box-tools pull-right">
                                    <span class="time"><i class="fa fa-clock-o"></i> @item.Date</span>
                                    <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
                                </div>
                            </div>
                            <!-- /.box-header -->
                            <div class="box-body" style="">
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            จำนวนเบี้ย : @item.Amount
                                        </div>
                                    </div>
                                </div>
                                <!-- /.row -->
                            </div>

                        </div>
                    </div>
                </li>
                <!-- END timeline item -->
            }

            if (item.TransType == "CreateQueue")
            {

            }

            if (item.TransType == "CloseQueue")
            {
                <!-- timeline item -->
                <li>
                    <!-- timeline icon -->
                    <i class="fa fa-phone bg-blue"></i>
                    <div class="timeline-item ">
                        <div class="box box-default">
                            <div class="box-header with-border">
                                <h3 class="box-title">โทรคัดกรอง</h3>
                                <span class=""><a class="btn btn-primary btn-xs">@item.QueueId</a></span>
                                <div class="box-tools pull-right">
                                    <span class="time"><i class="fa fa-clock-o"></i> @item.Date</span>
                                    <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
                                </div>
                            </div>
                            <!-- /.box-header -->
                            <div class="box-body" style="">
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            ผู้คัดกรอง : @item.QueueClosedBy
                                        </div>
                                    </div>
                                </div>
                                <!-- /.row -->
                            </div>

                        </div>
                    </div>
                </li>
                <!-- END timeline item -->
            }
        }
    </ul>
</div>