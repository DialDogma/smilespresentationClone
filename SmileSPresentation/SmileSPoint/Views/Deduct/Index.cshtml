@{
    ViewBag.Title = "รายการบันทึกนำเข้าการหัก Point";
}

<div class="row">
    <div class="col-xs-12">
        <div class="box">
            <div class="box-header">
                <a href="@Url.Action("UploadDeduct")" class="btn btn-success" style="float: right; width: 100px;">+ Import File</a>
            </div>
            <!-- /.box-header -->
            <div class="box-body">
                <table id="datatable1" class="table table-bordered table-striped"></table>
            </div>
        </div>
        <!-- /.box-body -->
    </div>
    <!-- /.box -->
</div>

@section ViewSpecificJavascript
{
    <script>
        $(function () {
            //Load Datatable
            $('#datatable1').DataTable({
                pageLength: 10,
                processing: true,
                serverSide: true,
                ajax: {
                    url: '@Url.Action("GetDatatable")',
                    data: function (d) {
                        d.draw = d.draw;
                        d.pageSize = d.length;
                        d.pageStart = d.start;
                        d.sortField = d.columns[d.order[0].column].data;
                        d.orderType = d.order[0].dir;
                        d.search = d.search.value;
                    }
                },
                columns: [
                    {
                        title: '',
                        data: 'DeductImportHeaderId',
                        width: 100,
                        className: 'dt-center',
                        render: function (data) {
                            return '<a href="@Url.Action("DownloadResult")?id=' + data + '" class="btn btn-success" title="Download ผลหัก" style="margin: 2px;">Download ผลหัก</a>';
                        }
                    },
                    {
                        title: 'ยอดส่งหัก',
                        data: 'Amount',
                        className: 'dt-right',
                        render: function (data) {
                            var amount = data.toString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                            var result;
                            result = '<p class="text-black">' + amount + '</p>';
                            return result;
                        } },
                    {
                        title: 'หักได้',
                        data: 'Deductible',
                        className: 'dt-right',
                        render: function (data) {
                            var amount = data.toString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                            var result;
                            result = '<p class="text-green">' + amount + '</p>';
                            return result;
                        } },
                    {
                        title: 'หักไม่ได้',
                        data: 'NotDeductible',
                        className: 'dt-right',
                        render: function (data) {
                            var amount = data.toString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                            var result;
                            result = '<p class="text-red">' + amount + '</p>';
                            return result;
                        } },
                    {
                        title: 'วันที่บันทึก',
                        data: 'CreatedDate',
                        className: 'dt-center',
                        render: function (data) {
                            return DisplayJsonDateBE(data);
                        }
                    },
                    {
                        title: 'ผู้บันทึก',
                        data: 'CreatedBy',
                        className: 'dt-right'  }
                ]
            });
        });
    </script>
}