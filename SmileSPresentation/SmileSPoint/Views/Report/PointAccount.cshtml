@{
    ViewBag.Title = "รายงาน Point Account";
}

<div class="row">
    <div class="col-xs-12">
        <div class="box box-success">
            <div class="box-header with-border">
            </div>
            <!-- /.box-header -->
            <div class="box-body">
                <!-- form start -->
                <form class="form-horizontal" id="form1" action="@Url.Action("PointAccount")" method="post" enctype="multipart/form-data">
                    <div class="box-body">
                        <div class="form-group">
                            <label for="AccountTypeId" class="col-sm-2 control-label">ประเภทบัญชี</label>
                            <div class="col-sm-4">
                                <select class="form-control select2" name="AccountTypeId" id="AccountTypeId" style="width: 100%;">
                                    <option value="-1">ทั้งหมด</option>
                                    @foreach (var item in ViewBag.AccountTypeId)
                                    {
                                        <option value="@item.PointAccountTypeId">@item.PointAccountTypeName</option>
                                    }
                                </select>
                            </div>
                        </div>
                    </div>
                    <!-- /.box-body -->
                    <div class="box-footer">
                        <button type="submit" class="col-sm-offset-2 btn btn-primary"><i class="fa fa-floppy-o"></i> Download </button>
                        <a href="@Url.Action("Index")" class="btn btn-danger"><i class="fa fa-times"></i> Cancel</a>
                    </div>
                    <!-- /.box-footer -->
                </form>
            </div>
        </div>
        <!-- /.box-body -->
    </div>
    <!-- /.box -->
</div>