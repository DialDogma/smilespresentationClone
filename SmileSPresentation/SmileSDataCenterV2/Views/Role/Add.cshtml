@{
    ViewBag.Title = "Add Role";
}

<div class="row">
    <div class="col-xs-12">
        <div class="box box-success">
            <div class="box-header with-border">
                <h3 class="box-title">Add New Role</h3>
            </div>
            <!-- /.box-header -->
            <div class="box-body">
                <div id="form1_msg" class="alert alert-danger alert-dismissible" style="display: none;">
                    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                    <h4><i class="icon fa fa-ban"></i> เตือน!</h4>
                    กรุณากรอกข้อมูลให้ถูกต้องและครบถ้วน
                </div>
                <!-- form start -->
                <form class="form-horizontal" id="form1" action="@Url.Action("Add")" method="post" enctype="multipart/form-data">
                    <div class="box-body">
                        @*Name*@
                        <div class="form-group">
                            <label for="Name" class="col-sm-2 control-label">Role Name</label>
                            <div class="col-sm-4">
                                <input type="text" class="form-control" placeholder="Name" name="Name" id="Name">
                            </div>
                        </div>
                        <!-- /.box-body -->
                        <div class="box-footer">
                            <button type="submit" class="col-sm-offset-2 btn btn-primary"><i class="fa fa-floppy-o"></i> Submit</button>
                            <a href="@Url.Action("Index")" class="btn btn-danger"><i class="fa fa-times"></i> Cancel</a>
                        </div>
                    </div>
                    <!-- /.box-footer -->
                </form>
            </div>
        </div>
        <!-- /.box-body -->
    </div>
    <!-- /.box -->
</div>
@section ViewSpecificJavascript{
    <script>
        $(function () {
            //Initialize Select2 Elements
            $('.select2').select2();

            $(".datepicker").datepicker();

            $("#form1").validate({
                rules: {
                    Name: { required: true }
                },
                invalidHandler: function (e, r) {
                    $("#form1_msg").css('display', 'block');
                },
                submitHandler: function (e) {
                    e.preventDefault();
                }
            });
        });
    </script>
}