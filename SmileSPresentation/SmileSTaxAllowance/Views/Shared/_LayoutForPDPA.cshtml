<body class="hold-transition " style="font-family: 'Kanit', sans-serif;">
    <div class="wrapper">

        <div class="content">
            <section class="content-header">
                <h1></h1>

                <div style="text-align:center">
                    <img src="~/Content/img/ssml_logo_1.png" width="200" height="200" class="responsive" />
                </div>
            </section>

            <section class="content">
                @RenderBody()
            </section>
        </div>

        @*style="padding:15px; background-color:#57C6F1; color:white; "*@
    </div>

    <div class="siamsmile-footer" style="padding:15px; background-color:#57C6F1; color:white; ">
