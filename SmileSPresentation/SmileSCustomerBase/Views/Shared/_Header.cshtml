<header class="main-header">
    @* BEGIN Logo *@
    <a href="@Url.Action("QueueManager", "CustomerBase")" class="logo">
        @* Mini logo for sidebar 50x50 pixels *@
        <span class="logo-mini"><b>CB</b></span>
        @* Logo for regular state and mobile devices *@
        <span class="logo-lg">
            @if(@ViewBag.Header != null)
            {@ViewBag.Header}
        else
        {<b>Customer Base</b>}
        </span>
    </a>
    @* END Logo *@
    @* BEGIN Header *@
    <nav class="navbar navbar-static-top" role="navigation">
        <a href="#" class="sidebar-toggle" data-toggle="push-menu" role="button">
            <span class="sr-only">Toggle navigation</span>
        </a>
        <div class="navbar-custom-menu">
            <ul class="nav navbar-nav">
                @* BEGIN User Account Menu *@
                <li class="dropdown user user-menu">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                        <span class="hidden-xs">@Session["Username"] - @Session["FullName"]</span>
                    </a>
                    <ul class="dropdown-menu">
                        <li class="user-header">
                            <p>
                                @Session["FullName"] - @Session["DepartmentDetail"]
                                <small>@Session["EmployeePositionDetail"]</small>
                                <small><label>รหัสพนักงาน : </label>@Session["Username"]</small>
                            </p>
                        </li>
                        <li class="user-footer">
                            <div class="pull-right">
                                <a href="@Url.Action("Logout","Auth")" class="btn btn-default btn-flat">Sign out</a>
                            </div>
                        </li>
                    </ul>
                </li>
                @* END User Account Menu *@
            </ul>
        </div>
    </nav>
</header>