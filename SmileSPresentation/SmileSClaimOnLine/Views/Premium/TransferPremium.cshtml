                            showLoaderOnConfirm: true
                        }, function () {
                            swal.close();
                            $('#exampleModal').modal('hide');
                        });
                    } else {
                        let text = data.Message;
                        const myArray = text.split("/");
                        const arrayLength = myArray.length;
                        if (arrayLength > 1) {
                            let msgTH = myArray[0];
                            let msgEn = myArray[1];
                            swal("ทำรายการไม่สำเร็จ", msgTH + "\n" + msgEn, "error");
                        } else {
                            swal("", data.Message, "error");
                        }
                    }
                }
            });
