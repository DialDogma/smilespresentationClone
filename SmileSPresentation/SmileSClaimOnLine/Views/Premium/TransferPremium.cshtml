        function displayNumber(data) {

            var dataString = data.toString().split('.');
            var displayData = "";
            if (dataString.length == 2) {
                displayData = numberWithCommas(dataString[0]) + "." + dataString[1].substring(0, 2);
            } else {
                displayData = data.toString();
            }

            return displayData;
        }


