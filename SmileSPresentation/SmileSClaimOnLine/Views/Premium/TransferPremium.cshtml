                                                <div class="">
                                                    <strong><i class="fa fa-book margin-r-5"></i> ประเภทเคลม</strong>
                                                    <p class="text-muted" id="lblClaimType" style="text-indent:20px;"></p>
                                                </div>
                                            </div>

                                            <div class="col-sm-6">
                                                <div class="">
                                                    <strong><i class="fa fa-book margin-r-5"></i> รายละเอียด</strong>
                                                    <p class="text-muted" id="lblDetail" style="text-indent:20px"></p>
                                                </div>
                                                <!-- /.description-block -->

                                                <div class="">
                                                    <strong><i class="fa fa-book margin-r-5"></i> จำนวนเคลม </strong>
                                                    <p class="text-muted" id="lblClaimCount" style="text-indent:20px"></p>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <input id="hdfClaimOnLineId" name="hdfClaimOnLineId" type="hidden" />

                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-12">

                                <div class="col-sm-4 col-sm-offset-2">
                                    <label class="control-label">บัญชีส่วนกลาง : </label>
                                    <input type="text" class="form-control" value="@ViewBag.Account" disabled>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-12">
                                <div class="col-sm-4 col-sm-offset-2">
                                    <label class="control-label">ประเภทการโอน :</label>
                                    <select class="form-control select2 " style="width: 100%;" tabindex="-1" aria-hidden="true" id="ddlTransferType" name="ddlTransferType">
                                        @foreach (var item in @ViewBag.TransferType)
                                        {
                                            <option value=@item.TransferTypeId>  @item.TransferType </option>
                                        }
                                    </select>
                                </div>

                                <div class="col-sm-4">
                                    <label class="control-label">ธนาคาร :</label>
                                    <select class="form-control select2 " style="width: 100%;" tabindex="-1" aria-hidden="true" id="ddlBank" name="ddlBank" disabled>
                                        @foreach (var item in @ViewBag.Bank)
                                        {
                                            <option value=@item.Bank_ID>  @item.BankDetail </option>
                                        }
                                    </select>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-12">

                                <div class="col-sm-4 col-sm-offset-2">
                                    <label class="control-label">เลขที่บัญชี :</label>
                                    <input type="text" class="form-control" placeholder="เลขที่บัญชี...." id="txtAccountNo" name="txtAccountNo" disabled>
                                </div>
                                <div class="col-sm-4">
                                    <label class="control-label">ชื่อบัญชี :</label>
                                    <input type="text" class="form-control" placeholder="ชื่อบัญชี...." id="txtAccountName" name="txtAccountName" disabled>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-12">
                                <div class="col-sm-4 col-sm-offset-2">
                                    <label class="control-label">จำนวนเงินโอน : <label style="color:red" id="lblWariningTransferAmount" hidden>คุณไม่มีสิทธิ์ทำรายการนี้</label></label>
                                    <input type="text" class="form-control" placeholder="จำนวนเงินโอน...." id="txtAmount" name="txtAmount">
                                </div>
                                <div class="col-sm-2">
                                    <label class="control-label">วันที่โอนเงิน :</label>
                                    <input type="text" class="form-control pull-right" name="dtpTransferDate" id="dtpTransferDate" required="required"
                                           data-provide="datepicker" data-date-language="th-th" placeholder="dd/mm/yyyy hh:mm:ss" data-format="dd/MM/yyyy hh:mm:ss" disabled>
                                </div>
                                <div class="col-sm-2">

                                    <label class="control-label">เวลาโอนเงิน :</label>
                                    <input type="text" class="form-control timepicker" id="tpTransfer" name="tpTransfer" disabled>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-12">
                                <div class="col-sm-4 col-sm-offset-4" style="text-align:center">
                                    <button type="button" class="btn btn-success" id="btnSave" name="btnSave" style="width:30%"> บันทึก </button>
                                    <button type="button" class="btn btn-secondary" data-dismiss="modal" id="btnCancel" name="btnCancel" style="width:30%">ยกเลิก</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="modal-footer">

                    @*<button type="submit" class="btn btn-primary">Submit</button>*@
                </div>
            </div>
        </div>
    </div>

    @* Modal Transfer Log *@
    <div class="modal fade" id="modal-TransferLog" style="display: none;">
        <div class="modal-dialog modal-lg modal-dialog-centered" style="width:150vh">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                    <h4 class="modal-title">ประวัติการโอนเงิน</h4>
                </div>
                <div class="modal-body" style="width:100%">

                    <table id="dtTransferLog" class="table table-bordered table-striped display" style="width: 100%"></table>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default pull-right" data-dismiss="modal" id="btncloseLog">Close</button>
                </div>
            </div>
            <!-- /.modal-content -->
        </div>
        <!-- /.modal-dialog -->
    </div>
</form>

@section ViewSpecificJavascript
{
    <script type="text/javascript">
        let PayeeBankAccountNo;

        $(function () {

            //Select2
            $('.select2').select2();

            $('#dtpTransferDate').datepicker({ format: "dd/mm/yyyy", autoclose: true }).datepicker("setDate", new Date());

            $('#dtpDateFrom').datepicker({ format: "dd/mm/yyyy", autoclose: true }).datepicker("setDate", new Date());
            $('#dtpDateTo').datepicker({ format: "dd/mm/yyyy", autoclose: true }).datepicker("setDate", new Date());
            $('#ddlTransferType').select2().val('3').trigger('change.select2');
            //$('#ddlClaimOnLineAccount').select2().val(data.PayeeBankId).trigger('change.select2');

            $('#tpTransfer').timepicker({
                timeFormat: 'HH:mm:ss',
                showMeridian: false
            });

            //Load Zone Default V1
            GetZoneVersion1();
            //Load Default Zone Default V1
            GetZoneByEmployeeId();

            $('#btnSearch').click(function (e) {
                e.preventDefault();

                if ($('#ddlVersion').val() == "-1") {
                    swal("ตรวจสอบ", "กรุณาเลือก เวอร์ชั่น", "warning");
                } else {
                    if ($('#ddlVersion').val() == 1) {
                        GetMonitorClaimOnLine();
                    } else {
                        GetMonitorClaimOnLineVersion2();
                    }
                }

            });

            $("#txtAmount").inputmask({
                'alias': 'decimal',
                rightAlign: false,
                'groupSeparator': '.',
                'autoGroup': true
            });

            $('#btnCancel').click(function (e) {

                e.preventDefault();
                DoClear();

            });

            $('#btnSave').click(function (e) {
                e.preventDefault();

                if (IsValidateForSave() != "") {
                    alert(IsValidateForSave());
                }
                else {
                    // get reference to dropdown list element
                    const dropdownList = $('#ddlBank');

                    // get selected option value and text
                    const selectedOptionValue = dropdownList.val();
                    const selectedOptionText = dropdownList.find('option:selected').text();
                    console.log();
                    swal({
                        title: "ยืนยันการทำรายการหรือไม่ ?",
                        text: `ชื่อบัญชี : ${selectedOptionText} ${PayeeBankAccountNo} ${$('#txtAccountName').val()}\nจำนวนเงิน: ${$('#txtAmount').val()} บาท`,
                        type: "warning",
                        showCancelButton: true,
                        confirmButtonClass: "btn-danger",
                        confirmButtonText: "ตกลง",
                        cancelButtonText: "ยกเลิก",
                        closeOnConfirm: false,
                        showLoaderOnConfirm: true
                    },
                        function () {
                            setTimeout(function () {
                                GetClaimOnLineTransferPremiumAccount();
                            }, 500)
                        }
                    )
                }

            });

            $('#ddlZone').change(function (e) {
                e.preventDefault();
                $('#ddlBranch').empty();
                if ($('#ddlVersion').val() == 1) {
                    GetBranchByZoneId($('#ddlZone').val());
                } else if ($('#ddlVersion').val() == 2) {
                    GetBranchByAreaId($("#ddlZone").val());
                } else {

                }

            });

            $("#txtAmount").keyup(function () {
                var inputText = $(this).val();
                const doubleAmount = Number($('#txtAmount').val().replace(/,/g, ""));

                if (doubleAmount >= @ViewBag.TransferAmountLimit && '@ViewBag.AllowTransferAmountLimit' === 'False')
                {
                    $('#lblWariningTransferAmount').show();
                    $('#btnSave').attr('disabled', true);
                } else {
                    $('#lblWariningTransferAmount').hide();
                    $('#btnSave').attr('disabled', false);
                }
            });

            $('#ddlVersion').change(function (e) {
                e.preventDefault();

                //ถ้า เวอร์ชั่น 1 ให้โหลด โซน สาขา ปกติ
                if ($(this).val() == 1) {
                    //Load Zone
                    GetZoneVersion1();
                    //Load Default Zone
                    GetZoneByEmployeeId();
                    //Load Branch
                }
                //ถ้า เวอร์ชั่น 2 ให้โหลด โซนใหม่ สาขาใหม่
                else if ($(this).val() == 2) {
                    //Load Zone
                    GetAreaVersion2();
                    //Load Default Zone
                    GetDefaultAreaByUserId();
                    //Load Branch
                } else {
                    $('#ddlZone').empty();
                    $('#ddlBranch').empty();
                }
            });

            //แสดงเวลา real-time
            var timeInput = $('#tpTransfer');
            intervalId = setInterval(function () {
                var currentTime = new Date().toLocaleTimeString();
                timeInput.val(currentTime);
            }, 1000);

        })

        function GetClaimOnLineTransferPremiumAccount() {
            $.ajax({
                type: "GET",
                url: "@Url.Action("GetClaimOnLineTransferPremiumAccount", "Premium")",
                data: {
                    claimOnlineId: $('#hdfClaimOnLineId').val(),
                    transferTypeId: $('#ddlTransferType').val()
                },
                dataType: "json",
                async: false,
                success: function (data) {
                    SaveTmpClaimOnlineTransfer(data.PersonContactPhoneNo, data.TransferTypeId, data.PayerTypeId, data.PayeeTypeId, data.FromBankId, data.FromAccountNo, data.FromAccountName);
                }
            });
        }

        function addCommas(nStr) {
            nStr += '';
            var x = nStr.split('.');
            var x1 = x[0];
            var x2 = x.length > 1 ? '.' + x[1] : '';
            var rgx = /(d+)(d{3})/;

            while (rgx.test(x1)) {
                x1 = x1.replace(rgx, '$1' + ',' + '$2');
            }

            return x1 + x2;
        }

        const GetAreaVersion2 = () => {
            $('#ddlZone').empty();
            $.ajax({
                type: "GET",
                url: "@Url.Action("GetAreaVersion1", "Premium")",
                //data: "name=John&location=Boston",
                dataType: "json",
                async: false,
                success: function (data) {

                    $('#ddlZone').append('<option value=-1>---ทั้งหมด---</option>');
                    for (var i = 0; i < data.length; i++) {
                        $('#ddlZone').append('<option value=' + data[i].AreaId + '>' + data[i].AreaDetail + '</option>');
                    }
                }
            });
        }

        const GetZoneVersion1 = () => {
            $('#ddlZone').empty();
            $.ajax({
                type: "GET",
                url: "@Url.Action("GetZoneVersion1", "Premium")",
                //data: "name=John&location=Boston",
                dataType: "json",
                async: false,
                success: function (data) {
                    $('#ddlZone').append('<option value=-1>---ทั้งหมด---</option>');
                    for (var i = 0; i < data.length; i++) {
                        $('#ddlZone').append('<option value=' + data[i].ZoneId + '>' + data[i].Zone + '</option>');
                    }
                }
            });
        }

        const GetBranchByAreaId = (areaId) => {

            $('#ddlBranch').empty();
             $.ajax({
                type: 'GET',
                url: '@Url.Action("GetBranchByAreaId", "Premium")',
                 data: { areaId: areaId },
                async: false,
                success: function (data) {
                    $('#ddlBranch').append('<option value=-1>---ทั้งหมด---</option>');
                    for (var i = 0; i < data.length; i++) {
                        $('#ddlBranch').append('<option value=' + data[i].BranchID + '>' + data[i].Branch + '</option>');
                    }
                },
                error: function (xhr, textStatus, errorThrown) {
                    alert('request fail');
                }

            });
        }

        const GetDefaultAreaByUserId = () =>
        {
            $.ajax({
                type: 'GET',
                url: '@Url.Action("GetDefaultAreaByUserId", "Premium")',
                async: false,
                //data: { zoneId: ZoneId },
                success: function (data) {
                    if (data == 0) {

                        $('#ddlZone').select2().val("-1").trigger('change.select2');

                        GetBranchByAreaId($("#ddlZone").val());

                    } else {
                        $('#ddlZone').select2().val(data.AreaId).trigger('change.select2');

                        GetBranchByAreaId($("#ddlZone").val());

                    }

                },
                error: function (xhr, textStatus, errorThrown) {
                    alert('request fail');
                }

            });
        }

          function GetZoneByEmployeeId()
        {
            $.ajax({
                type: 'GET',
                url: '@Url.Action("GetZoneByEmployee", "Premium")',
                async: false,
                //data: { zoneId: ZoneId },
                success: function (data) {
                    if (data == 0) {

                        $('#ddlZone').select2().val("-1").trigger('change.select2');

                        GetBranchByZoneId($("#ddlZone").val());

                    } else {
                        $('#ddlZone').select2().val(data).trigger('change.select2');

                        GetBranchByZoneId($("#ddlZone").val());

                    }

                },
                error: function (xhr, textStatus, errorThrown) {
                    alert('request fail');
                }

            });
        }

        function GetBranchByZoneId(ZoneId)
        {
            //if (ZoneId == -1) {

            //    ZoneId = null;
            //}

            $('#ddlBranch').empty();
             $.ajax({
                type: 'GET',
                url: '@Url.Action("GetBranchByZoneId" ,"Premium")',
                 data: { zoneId: ZoneId },
                async: false,
                success: function (data) {
                    $('#ddlBranch').append('<option value=-1>---ทั้งหมด---</option>');
                    for (var i = 0; i < data.length; i++) {
                        $('#ddlBranch').append('<option value=' + data[i].Branch_ID + '>' + data[i].BranchDetail + '</option>');
                    }
                },
                error: function (xhr, textStatus, errorThrown) {
                    alert('request fail');
                }

            });

        }

        function DoClear()
        {
            $("#hdfClaimOnLineId").val('');
            $("#txtAmount").val("0");
            $('#lblWariningTransferAmount').hide();
        }

        function GetMonitorClaimOnLineVersion2() {

            $('#dtMonitor').empty();
            var table = $('#dtMonitor').DataTable({
                pageLength: 10,
                processing: true,
                serverSide: true,
                responsive: true,
                destroy: true,
                ajax: {
                    url: '@Url.Action("GetMonitorClaimOnlineVersion2", "Premium")',
                    type: 'POST',
                    data: function (d) {
                        d.draw = d.draw;
                        d.pageSize = d.length;
                        d.pageStart = d.start;
                        d.sortField = d.columns[d.order[0].column].data;
                        d.orderType = d.order[0].dir;
                        d.search = d.search.value;
                        d.branchId = $('#ddlBranch').val();
                        d.zoneId = $('#ddlZone').val();
                        d.dateFrom = $('#dtpDateFrom').val();
                        d.dateTo = $('#dtpDateTo').val();
                    }
                },
                columns: [

                    {
                        searchable: false,
                        orderable: false,
                        className: 'dt-center',
                        data: null,
                        title: 'Action',
                        mRender: function (data) {
                            return '<a href="" onclick="GetMonitorDetail(\'' + data.ClaimOnLineId + '\')" ;return false;"  data-toggle="modal" data-target=".bd-example-modal-lg" class="btn btn-primary"> โอนเพิ่ม </a>';

                        }
                    },
                    { title: 'COLCode', data: 'ClaimOnLineCode' },
                    { title: 'ประเภทเคลม', data: 'ProductType' },
                    { title: 'รายละเอียด', data: 'Detail' },
                    { title: 'จำนวนการเคลม', data: 'ClaimCount', className: 'dt-center' },

                    { title: 'ผู้ให้บริการ', data: 'ServiceBy' },
                    { title: 'เขตสาขา', data: 'NoticeByStudyArea' },
                    { title: 'สาขา', data: 'Branch' },
                    { title: 'โซน', data: 'Zone' },
                    { title: 'สถานะ', data: 'ClaimOnLineStatus' },
                    {
                        title: 'วันที่ทำรายการล่าสุด',
                        data: 'CreateDate',
                        className: 'dt-center',
                        render: function (data) {
                            if (data != null) {
                                return moment(data).format('DD/MM/YYYY');
                            } else {
                                return '';
                            }

                        }
                    },
                     { title: 'เลขที่บัญชี', data: 'PayeeAccountNo' },
                     { title: 'ชื่อบัญชี', data: 'PayeeAccountName' },

                     {
                         title: 'จำนวนเงินโอน',
                         data: 'AmountTotal',
                         className: 'dt-center',

                         render: function (data, type, row, meta) {
                             
                             if (data != null) {
                                 var displayData = displayNumber(data);

                                 return '<a href="" onclick="GetMonitorLog(\'' + row.ClaimOnLineId + '\')" ;return false;"  data-toggle="modal" data-target="#modal-TransferLog">' + displayData + '</a>';
                             } else {
                                 return '';
                             }

                         }
                     },

                    {
                        title: 'วันที่โอนเงินล่าสุด',
                        data: 'TransferDate',
                        className: 'dt-center',
                        render: function (data) {
                            if (data != null) {
