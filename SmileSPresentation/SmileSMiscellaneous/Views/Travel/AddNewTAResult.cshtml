@{
    ViewBag.Title = "Add New Travel Insurance";
}

<div class="row">
    @* header navigation *@
    <div id="Header" class="col-md-12">
        <div class="box box-footer">
            <div class="row">
                @* menu1 *@
                <div class="col-md-3 border-right">
                    <div class="description-block">
                        <a href="@Url.Action("AddNewTAMain")">
                            <span class="glyphicon glyphicon-check" style="color: green"></span>
                            <h5 class="description-text">เลือกแบบประกัน</h5>
                        </a>
                    </div>
                </div>
                @* menu2 *@
                <div class="col-md-3 border-right">
                    <div class="description-block">
                        <a href="@Url.Action("AddNewTA")">
                            <span class="glyphicon glyphicon-edit" style="color: green"></span>
                            <h5 class="description-text">กรอกข้อมูลผู้เอาประกัน</h5>
                        </a>
                    </div>
                </div>
                @* menu3 *@
                <div class="col-md-3 border-right">
                    <div class="description-block">
                        <a href="@Url.Action("AddNewTAPayer")">
                            <span class="glyphicon glyphicon-edit" style="color: green"></span>
                            <h5 class="description-text">กรอกข้อมูลผู้ชำระเบี้ยและผู้รับผลประโยชน์</h5>
                        </a>
                    </div>
                </div>
                @* menu4 *@
                <div class="col-md-3">
                    <div class="description-block">
                        <a href="@Url.Action("AddNewTAResult")">
                            <span class="glyphicon glyphicon-edit" style="color: darkorange"></span>
                            <h5 class="description-text">ตรวจสอบรายละเอียด</h5>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    @* form start *@
    <form action="@Url.Action("AddNewTAResult")" method="post">
        @* Insurance plan *@
        <div id="InsurancePlan_form" class="col-md-12">
            <div class="box box-success">
                <div class="box-header with-border">
                    <h4 class="box-title">แผนประกัน</h4>
                    <div class="box-tools pull-right">
                        <button type="button" class="btn btn-box-tool" data-widget="collapse">
                            <i class="fa fa-minus"></i>
                        </button>
                    </div>
                </div>
                <div class="box-body">
                    <div class="form-group row">
                    </div>
                </div>
            </div>
        </div>
        @* Customer *@
        <div id="Customer_form" class="col-md-12">
            <div class="box box-success">
                <div class="box-header with-border">
                    <h4 class="box-title">ผู้เอาประกัน</h4>
                    <div class="box-tools pull-right">
                        <button type="button" class="btn btn-box-tool" data-widget="collapse">
                            <i class="fa fa-minus"></i>
                        </button>
                    </div>
                </div>
                <div class="box-body">
                    <div class="form-group row">
                    </div>
                </div>
            </div>
        </div>
        @* ผู้ชำระเบี้ย *@
        <div id="Payer_Form" class="col-md-12">
            <div class="box box-success">
                <div class="box-header with-border">
                    <h4 class="box-title">ผู้ชำระเบี้ย</h4>
                    <div class="box-tools pull-right">
                        <button type="button" class="btn btn-box-tool" data-widget="collapse">
                            <i class="fa fa-minus"></i>
                        </button>
                    </div>
                </div>
                <div class="box-body">
                    <div class="form-group row">
                    </div>
                </div>
            </div>
        </div>
        @* ผู้รับผลประโยชน์ *@
        <div id="Heir_Form" class="col-md-12">
            <div class="box box-success">
                <div class="box-header with-border">
                    <h4 class="box-title">ผู้รับผลประโยชน์</h4>
                    <div class="box-tools pull-right">
                        <button type="button" class="btn btn-box-tool" data-widget="collapse">
                            <i class="fa fa-minus"></i>
                        </button>
                    </div>
                </div>
                <div class="box-body">
                    <div class="form-group row">
                    </div>
                </div>
            </div>
        </div>
        @* footer *@
        <div id="submit_tab" class="col-md-12">
            <div class="box box-solid">
                <div class="box-body">
                    <div class="form-group row">
                        <div class="col-sm-4"></div>
                        <div class="col-sm-2">
                            <button id="SubmitForm" type="button" class="btn btn-block btn-success">บันทึกข้อมูล</button>
                        </div>
                        <div class="col-sm-2">
                            <button id="CancelForm" type="button" class="btn btn-block btn-warning">บันทึกข้อมูล</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        @* end form *@
    </form>
</div>