    <form action="@Url.Action("AddNewTA")" method="post">
        @* form start *@
        @* left column *@
        <div class="col-md-6">
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h4 class="box-title">ค้นหาข้อมูล</h4>
                </div>
                <div class="box-body">
                    <div class="form-group">
                        <label for="select_Person" class="col-sm-3 control-label">คำค้นหา:</label>
                        <div class="col-sm-9">
                            <div class="input-group input-group-sm">
                                @*<input type="text" name="txtSearch" id="txtSearch" class="form-control js-search-person">*@
                                <select name="select_Person" id="select_Person" class="form-control js-search-person"></select>
                                <span class="input-group-btn">
                                    <button type="button" id="btnSelectPerson" class="btn btn-info btn-flat">เลือก</button>
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        @* right column *@
        <div class="col-md-6">

            <div class="box box-primary">
                <div class="box-header with-border">
                    <h4 class="box-title">ประเภทผู้เอาประกัน</h4>
                </div>
                <div class="box-body">
                    <div class="form-group">
                        <div class="col-sm-3" style="text-align: right">
                            <label class="control-label" for="select_PersonType">ประเภท :</label>
                        </div>
                        <div class="col-sm-9">
                            <select name="select_PersonType" id="select_PersonType" class="form-control select2" disabled="disabled">
                                @foreach(var itm in ViewBag.PersonTypeList)
                                {
                                    if(itm.PersonType_ID == 1)
                                    {
                                        <option value="">---กรุณาเลือก---</option>
                                    }
                                    else
                                    {
                                        <option value="@itm.PersonType_ID">@itm.PersonTypeDetail</option>
                                    }

                                }
                            </select>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        @* Person main *@
