@section ViewSpecificJavascript
{
    <script type="text/javascript">
        $(function() {
                hideOnLoad();

            $('#btnSelectPerson').on('click', function ()
            {
                ClearAllBox();
                debugger;
                GetAllBoxInfo($('#select_Person').val());
                 DisableAllBox();
            });

            $('.select2').select2();
            $('.datepicker').datepicker();
                $('.js-search-person').select2({
                    ajax: {
                        type: 'GET',
                        url: '@Url.Action("SearchPerson")',
                        dataType: 'json',
                        delay: 250,
                        data: function(params) {
                            return {
                                q: params.term // search term
                                //page: params.page
                            };
                        },
                        processResults: function(data, search) {
                            //params.page = params.page || 1;
                            return {
                                results: $.map(data,function(item) {
                                    return {
                                            id: item.Person_ID,
                                            text: item.FullName +' '+ item.PersonCardDetail
                                        }
                                    })
                            };
                        },
                        cache:true
                    },
                    templateResult: function(item) {
                        if (item.loading) return item.text;
                        return item.text;
                    },
                    escapeMarkup:function(markup) { return markup; }, // let our custom formatter work
                    minimumInputLength: 3
                });

        //show and hide form
        $('#select_PersonType').change(function() {
                if ($('#select_PersonType').val() == '2') {
                    $('#Person_Form').show();
                    $('#Address_Tab').show();
                    $('#submit_tab').show();
                    $('#Corporate_Form').hide();
                } else if ($('#select_PersonType').val() == '3') {
                    $('#Corporate_Form').show();
                    $('#Address_Tab').show();
                    $('#submit_tab').show();
                    $('#Person_Form').hide();
                } else {
                    hideOnLoad();
                }

            });

        });

        $('#select_Province1').on('change', function () {
            GetAddressCaseCade($('#subdistrictId1'));
        });

        function hideOnLoad() {
            $('#Person_Form').hide();
            $('#Corporate_Form').hide();
            $('#Address_Tab').hide();
            $('#submit_tab').hide();
        }

        //clear all data in box
        function ClearAllBox() {
            $('#select_PersonType').val(0);
        }
        //disable all box
        function DisableAllBox() {
            $('#Person_Form * ').prop('disabled', true);
            $('#Corporate_Form *').prop('disabled', true);
            $('#MainAddress *').prop('disabled', true);
            $('#WorkAddress *').prop('disabled', true);
            $('#CardAddress *').prop('disabled', true);

        }

        function GetAllBoxInfo(personId) {
            $.ajax({
                type: 'POST',
                url: '@Url.Action("SelectPersonDetail")',
                data: { personId: personId },
                success: function (data) {
                    if (data.Result.PersonType_ID == 2) {
                        $('#select_PersonType').val('2').change();
                        $('#select_title').val(data.Result.Title_ID).change();
                        $('#txtFirstName').val(data.Result.FirstName);
                        $('#txtLastName').val(data.Result.LastName);
                        $('#txtZCardId').val(data.Result.IdentityCard);
                        $('#txtPassport').val(data.Result.Passport);
                        $('#select_sex').val(data.Result.Sex_ID).change();
                        $('#select_status').val(data.Result.MaritalStatus_ID).change();
                        $('#txtTel').val(data.Result.Mobile);
                        //moment.locale();
                        var bday = moment(data.Result.BirthDate).format('l');
                        debugger;
                        $('#txtBirthDate').val(bday);
                        $('#select_occupation').val(data.Result.Occupation_ID).change();

                        $('#select_occupationLevel').val(data.Result.OccupationLevel_ID).change();

                    }
                    if (data.Result.PersonType_ID == 3) {
                        $('#select_PersonType').val('3').change();
                        $('#select_Cotitle').val(data.Result.Title_ID).change();
                        $('#txtCoName').val(data.Result.FirstName);
                        $('#txtCoNumber').val(data.personDetail.PersonCardDetail);
                        $('#txtCoTel').val(data.Result.Tel);
                    }
                    //set home address detail
                    $('#txtCoAddressName1').val(data.homeAddressResult.BuildingName);
                    $('#txtVillageName1').val(data.homeAddressResult.VillageName);
                    $('#txtHomeNumber1').val(data.homeAddressResult.No);
                    $('#txtVillageNo1').val(data.homeAddressResult.Moo);
                    $('#txtFloor1').val(data.homeAddressResult.Floor);
                    $('#txtRoom1').val(data.homeAddressResult.Room);
                    $('#txtValley1').val(data.homeAddressResult.Soi);
                    $('#txtRoad1').val(data.homeAddressResult.Road);
                    $('#select_SubDistrict1').val(data.homeAddressResult.SubDistrict_ID).change();
                    $('#select_District1').val(data.homeAddressResult.District_ID).change();
                    $('#select_Province1').val(data.homeAddressResult.Province_ID).change();
                    $('#txtPostCode1').val(data.homeAddressResult.ZipCode);
                    $('#subdistrictId1').val(data.homeAddressResult.SubDistrict_ID);

                }, error: function (xhr, textStatus, errorThrown) {
                        alert('request fail please cantact admin!');
                    }
            });
        }

        function GetOccupationLevel(occuId) {
             $.ajax({
                    type: 'GET',
                    url: '@Url.Action("GetOccupationLevel")',
                    data: { occuCode: occuId },
                    success: function (data) {
                        for (var i = 0; i < data.length; i++) {
                            $('#select_occupationLevel').append('<option value=' + data[i].OccupationLevel_ID + '>'+ data[i].OccupationLevelDetail +'</option>');
                        }
                    }, error: function (xhr, textStatus, errorThrown) {
                        alert('request fail');
                    }
            });
        }

        function GetAddressCaseCade(subDistrictId) {
            $.ajax({
                type: 'GET',
                url: '@Url.Action("SelectFullAddressFromSubDistrictId")',
                data: { subDistrictId: subDistrictId },
                success: function (data) {
                    $('#select_District1').append('<option value=' + data[i].districtResult.District_ID + ' selected>' + data[i].districtResult.DistrictDetail + '</option>');
                    $('#select_SubDistrict1').append('<option value=' + data[i].subDistrictResult.SubDistrict_ID + ' selected>' + data[i].subDistrictResult.SubDistrictDetail + '</option>');
                }
            });
        }
    </script>
}