                                {
                                    if(itm.PersonRelationType_ID == 1)
                                    {
                                        <option value="">---กรุณาเลือก---</option>
                                    }
                                    else
                                    {
                                        <option value="@itm.PersonRelationType_ID">@itm.PersonRelationType</option>
                                    }

