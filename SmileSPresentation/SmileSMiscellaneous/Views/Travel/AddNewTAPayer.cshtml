                <div class="box-header with-border">
                    <h4 class="box-title">ผู้รับผลประโยชน์</h4>
                </div>
                <div class="box-body">
                    @* 1st column *@
                    <div class="form-group row">
                        <label class="col-sm-1 control-label" for="select_Heirtitle">ชื่อ:</label>
                        <div class="col-sm-2">
                            <select name="select_Heirtitle" id="select_Heirtitle" class="form-control select2" required="">
                                @foreach(var item in @ViewBag.persontitle)
                                {
                                    if(item.Title_ID == 1)
                                    {
                                        <option value="">---กรุณาเลือก---</option>
                                    }
                                    else
                                    {
                                        <option value="@item.Title_ID">@item.TitleDetail</option>
                                    }

                                }
                            </select>
                        </div>
                        <div class="col-sm-4">
                            <input type="text" name="txtHeirFirstName" id="txtHeirFirstName" class="form-control" placeholder="ชื่อ" required="" />
                        </div>
                        <label class="col-sm-1 control-label" for="txtHeirLastName">นามสกุล:</label>
                        <div class="col-sm-4">
                            <input type="text" name="txtHeirLastName" id="txtHeirLastName" class="form-control" placeholder="นามสกุล" required="" />
                        </div>
                    </div>
                    @* 2nd row *@
                    <div class="form-group row">
                        <div class="col-sm-3" style="text-align: right">
                            <label for="select_Relation" class="control-label">ความสัมพันธ์กับผู้เอาประกัน:</label>
                        </div>
                        <div class="col-sm-4">
                            <select name="select_Relation" id="select_Relation" class="form-control" required="">
                                @foreach(var itm in @ViewBag.Relation)
                                {
                                    if(itm.PersonRelationType_ID == 1)
                                    {
                                        <option value="">---กรุณาเลือก---</option>
                                    }
                                    else
                                    {
                                        <option value="@itm.PersonRelationType_ID">@itm.PersonRelationType</option>
                                    }

                                }
                            </select>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        @* submit tab *@
        <div id="submit_tab" class="col-md-12">
            <div class="box box-solid">
                <div class="box-body">
                    <div class="form-group row">
                        <div class="col-sm-10"></div>
                        <div class="col-sm-2">
                            <button id="SubmitForm" type="button" class="btn btn-block btn-primary">บันทึกข้อมูล</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

@section ViewSpecificJavascript
{
    <script type="text/javascript">
        $(function () {
            hideOnLoad();

            $('.select2').select2();

            //show and hide form
            $('#select_RelationType').change(function () {
                if ($('#select_RelationType').val() == 39) {
                    $('#Person_Form').hide();
                    $('#Address_Tab').hide();
                    $('#submit_tab').show();
                    $('#Corporate_Form').hide();
                    $('#Heir_Form').show();
                } else if ($('#select_RelationType').val() == '') {
                    hideOnLoad();
                } else {
                    $('#Corporate_Form').hide();
                    $('#Address_Tab').show();
                    $('#submit_tab').show();
                    $('#Person_Form').show();
                    $('#Heir_Form').show();
                }

            });
        });

        function hideOnLoad() {
            $('#Person_Form').hide();
            $('#Corporate_Form').hide();
            $('#Address_Tab').hide();
            $('#submit_tab').hide();
            $('#Heir_Form').hide();
        }
    </script>
}