@{
    ViewBag.Title = "Import Data";
}
<style>
    .table {
        font-size: 14px
    }
</style>
<form action="" method="post" id="Mainform">
    <div class="row">
        @* Search form *@
        <div class="col-sm-12" id="Date_form">
            <div class="box box-default">
                <div class="box-header">
                    <h3 class="box-title">นำเข้าข้อมูล DCR</h3>
                </div>
                <div class="box-body">
                    <div class="form-group row">
                        <div class="col-sm-offset-2 col-sm-3">
                            <label for="" class="control-label">ประจำเดือน/ปี:</label>
                            <input type="text" class="form-control pull-right" name="yearSelect" id="yearSelect"
                                   data-date-language="th-th" data-provide="datepicker">
                        </div>
                    </div>
                </div>
            </div>
        </div>
        @* Search form *@
        <div class="col-sm-12" id="Browse_form">
            <div class="box box-default">
                <div class="box-header">
                    <h3 class="box-title">Data Source : @ViewBag.srcTitle</h3>
                </div>
                <div class="box-body">
                    <div class="form-group row">
                        <label class="col-sm-offset-1 col-sm-1 control-label" for="radios">ส่งข้อมูล</label>
                        <div class="col-sm-4">
                            <label class="radio-inline" for="radios-0">
                                <input type="radio" name="radios" id="radios-0" value="1" checked="checked">
                                มีข้อมูล
                            </label>
                            <label class="radio-inline" for="radios-1">
                                <input type="radio" name="radios" id="radios-1" value="2">
                                ไม่มีข้อมูล
                            </label>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-offset-1 col-sm-1 control-label" for="filebutton">นำเข้าไฟล์ :</label>
                        <div class="col-sm-2">
                            <input id="filebutton" name="filebutton" class="form-control" type="file">
                        </div>
                        <div class="col-sm-2">
                            <button type="button" class="btn btn-block btn-info">ดูตัวอย่าง</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        @* Dt form *@
        <div class="col-sm-12" id="Detail_form">
            <div class="box box-default">
                <div class="box-body">
                    <div class="form-group row">
                        <div class="col-sm-12">
                            <table id="dtShowDataSource" name="dtShowDataSource" class="table table-bordered table-striped" style="width: 100%"></table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
@section ViewSpecificJavascript
{
    <script type="text/javascript">
        $(function () {
            //select datepicker year
            $('#yearSelect').datepicker({ format: 'MM yyyy', viewMode: "months", minViewMode: "months" }).datepicker("setDate", new Date());
            $('#yearSelect').attr('readonly', true).datepicker("destroy");
            $('#yearSelect').unbind('focus');

        });
    </script>
}