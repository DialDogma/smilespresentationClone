
@{
    ViewBag.Title = "indexInsure";
    ViewBag.Description = "Home Page";
    Layout = "~/Views/Shared/_LayoutForTopIndex.cshtml";
}
@{
    // var userDetail = GlobalFunction.GetLoginDetail(this.Context);
    var userDetail = SmileSUnderwriteAudit.Helper.GlobalFunction.GetLoginDetail(this.Context);

    ViewBag.Firstname = userDetail.FirstName;
    ViewBag.Lastname = userDetail.LastName;
    ViewBag.EmpCode = userDetail.UserName;
    ViewBag.Department = userDetail.DepartmentDetail;
    ViewBag.BranchDetail = userDetail.BranchDetail;
    ViewBag.FullName = userDetail.FullName;
    ViewBag.EmployeeTeamDetail = userDetail.EmployeeTeamDetail;
    ViewBag.FullName = userDetail.FullName;
}
<style>
    .material-icons.md-62 {
        font-size: 65px;
    }
</style>
<div class="row animate-page">
    <div class="box box-widget widget-user-2">
        <!-- Add the bg color to the header using any of the bg-* classes -->
        <div class="widget-user-header">
            <div class="widget-user-image">
                <img class="img-circle" src="~/Content/img/logo_200x200.png" alt="User SiamSmile">
            </div>
            <!-- /.widget-user-image -->
            <h3 class="widget-user-username">@ViewBag.UserDetail.FullName</h3>
            <h5 class="widget-user-desc">@ViewBag.EmployeeTeamDetail - @ViewBag.UserDetail.DepartmentDetail</h5>
        </div>
    </div>
    @if (ViewBag.AccessRole.Contains("UnderwriteAudit_Insure") || ViewBag.AccessRole.Contains("Developer"))
    {
        <div class="col-md-3 col-sm-4">
            <div class="wrimagecard wrimagecard-topimage">
                <a href="/ph/insure/queue/create">
                    <div class="wrimagecard-topimage_header bg-aqua">
                        <center>
                            <span class="material-icons md-62" style="color: #ffffff ">
                                grading
                            </span>
                        </center>
                    </div>
                    <div class="wrimagecard-topimage_title">
                        <center>
                            <h5>
                                สร้างคิวงานพิจารณาคัดกรอง
                            </h5>
                        </center>
                    </div>
                </a>
            </div>
        </div>
        <div class="col-md-3 col-sm-4">
            <div class="wrimagecard wrimagecard-topimage">
                <a href="/ph/insure/queue/task">
                    <div class="wrimagecard-topimage_header bg-aqua">
                        <center>
                            <span class="material-icons md-62" style="color: #ffffff ">
                                person_search
                            </span>
                        </center>
                    </div>
                    <div class="wrimagecard-topimage_title">
                        <center>
                            <h5>
                                พิจารณาผลคัดกรอง
                            </h5>
                        </center>
                    </div>
                </a>
            </div>
        </div>
        <div class="col-md-3 col-sm-4">
            <div class="wrimagecard wrimagecard-topimage">
                <a href="/Queue/QueueConsideringUnderwriteResult">
                    <div class="wrimagecard-topimage_header bg-red">
                        <center>
                            <span class="material-icons md-62" style="color: #ffffff ">
                                error
                            </span>
                        </center>
                    </div>
                    <div class="wrimagecard-topimage_title">
                        <center>
                            <h5>
                                เฝ้าระวัง
                            </h5>
                        </center>
                    </div>
                </a>
            </div>
        </div>
    }
</div>

