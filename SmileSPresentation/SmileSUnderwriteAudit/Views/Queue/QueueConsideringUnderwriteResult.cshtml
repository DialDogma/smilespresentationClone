@{
    ViewBag.Title = "คิวงานพิจารณาผลการคัดกรอง";
    Layout = "~/Views/Shared/_LayoutForTopPHIndex.cshtml";
}

<style>
    /*.nav-tabs > li > a {
        border: medium none;
