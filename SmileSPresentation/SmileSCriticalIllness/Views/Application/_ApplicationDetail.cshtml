@using SmileSCriticalIllness.Models

@{ 
    var _context = new CriticalIllnessEntities();
    string appId = ViewBag.AppId.ToString();
    var appDetail = _context.usp_ApplicationDetail_Select(null, null, null, null, null, null, null, appId, null, null,99, null, null, null).FirstOrDefault();
    var x = new List<string>();
    _context.Dispose();
}

<div class="row">
    @* Application detail form *@
    <div id="ApplicationDetail_form">
        <div class="box box-info">
            <div class="box-header with-border">
                <h3 class="box-title">รายละเอียดกรมธรรม์</h3>
                <div class="box-tools pull-right">
                    <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
                </div>
            </div>
            <div class="box-body">
                <div class="form-group row">
                    <div class="col-sm-3 col-md-3">
                        <label class="control-label">Application ID:</label> <i id="txtAppId">@appDetail.ApplicationCode</i>
                    </div>
                    <div class="col-sm-3 col-md-3">
                        <label class="control-label">เลขกรมธรรม์:</label> <i id="txtPolicyId">@appDetail.CurrentPolicyNo</i>
                    </div>
                    <div class="col-sm-3 col-md-3">
                        <label class="control-label">แผนประกัน:</label> <i id="txtPlan">@appDetail.Product</i>
                    </div>
                    <div class="col-sm-3 col-md-3">
                        <label class="control-label">เบี้ยประกัน:</label> <i id="txtPremium">@appDetail.PremiumPerPolicy</i>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-sm-3 col-md-3">
                        <label class="control-label">บริษัทประกัน:</label> <i id="txtInsCompany">@appDetail.InsuranceCompany</i>
                    </div>
                    <div class="col-sm-3 col-md-3">
                        <label class="control-label">ทุนประกัน:</label> <i id="txtPlanBenefit">@appDetail.MaxCover</i>
                    </div>
                    <div class="col-sm-3 col-md-3">
                        <label class="control-label">เริ่มคุ้มครอง:</label> <i id="txtStartCoverDate">@(appDetail.StartCoverDate != null ? appDetail.StartCoverDate.Value.ToString("dd/MM/yyyy") : "")</i>
                    </div>
                    <div class="col-sm-3 col-md-3">
                        <label class="control-label">สิ้นสุด:</label> <i id="txtEndCoverDate">@(appDetail.EndCoverDate != null ? appDetail.EndCoverDate.Value.ToString("dd/MM/yyyy") : "")</i>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-sm-3 col-md-3">
                        <label class="control-label">สถานะกรมธรรม์:</label> <i id="txtAppStatus">@appDetail.ApplicationStatus</i>
                    </div>
                    <div class="col-sm-3 col-md-3">
                        <label class="control-label">ผลการพิจารณา:</label> <i id="txtAppUDWStatus">@appDetail.ApplicationUnderwriteStatus</i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    @* end application detail *@
</div>