@{
    Layout = "../Shared/_Layout_Empty.cshtml";
}

<style>
    body {
        font-family: Kanit,sans-serif !important;
    }

    body, html {
        margin: 0 auto;
        margin-bottom: 0.5cm;
        /*box-shadow: 0 0 0.5cm rgba(0,0,0,0.5);*/
        /*background-image: url(http://customer.siamsmile.co.th/service/content/img/BPbackground.jpg) !important;*/
        background-repeat: no-repeat;
        background-attachment: fixed;
        background-position: center;
        background-size: cover;
        /*background-size: cover;*/
    }

    /*.page {
        margin: 0 auto;
        margin-bottom: 0.5cm;*/
    /*box-shadow: 0 0 0.5cm rgba(0,0,0,0.5);*/
    /*background-image: url(http://customer.siamsmile.co.th/service/content/img/BPbackground.jpg) !important;
        background-repeat: no-repeat;
        background-attachment: fixed;
        background-position: center;
        background-size: cover;*/
    /*background-size: cover;*/
    /*}*/

    .page[size="A4"][layout="portrait"] {
        width: 29.7cm;
        height: 21cm;
    }

    Table, Tr, Td {
        font: 11pt Kanit, sans-serif;
        border-bottom: 2px;
    }

    img {
        max-width: 100px;
        height: auto;
    }

    .item {
        width: 500px;
        min-height: 500px;
        max-height: auto;
        float: left;
        margin: 3px;
        padding: 3px;
    }
</style>

<body>

    <div class="form-group row">
        <div class="col-xs-12 col-xs-offset-4 col-md-offset-1">
            <img src="~/Content/img/logo_larg22x.png" />
        </div>
        <div class="col-xs-12 col-md-offset-5 col-md-3">
            <a target="_blank" href="@Url.Action("CovidPDF")?appId=@ViewBag.id" class="btn btn-block btn-info btn-ellipse" style="margin-bottom:5px; font-family: Kanit;"> ดาวน์โหลด ตารางความคุ้มครอง<i class="fa fa-arrow-circle-down" style="margin-left:5px"></i></a>
        </div>
        <div class="col-xs-12 col-md-3">
            @*<a target="_blank" href="" class="btn btn-block btn-info btn-ellipse"> ดาวน์โหลด เอกสารแนบท้ายโควิด-19<i class="fa fa-arrow-circle-down" style="margin-left:8px"></i></a>*@
            <button class="btn btn-block btn-info btn-ellipse" style="font-family: Kanit;">ดาวน์โหลด เอกสารแนบท้ายโควิด-19<i class="fa fa-arrow-circle-down" style="margin-left:8px"></i></button>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-xs-12 col-md-offset-1 col-md-12">
            <h3 style="font-size:30px;font-weight: bold;">ตารางความคุ้มครอง</h3>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-xs-12 col-md-offset-1 col-md-10">
            <h4 style="font-size:20px;">ประกันภัยการเจ็บป่วยด้วยโรคติดเชื้อไวรัสโคโรนา 2019 (COVID-19) และอุบัติเหตุ</h4>
        </div>
    </div>
    <br />
    <div class="col-xs-12 col-md-offset-1 col-md-10">
        <div class="box box-info">
            <!-- form start -->
            <form id="Mainform">
                <div class="page" style="">
                    <br />
                    <table style="width: 100%; margin-left: 20px; margin-right: 20px; margin-bottom:20px;">
                        <tr style="height: 30px;">
                            <td style="width: 20%;">
                                <span style="margin: 5px;color:gray">ชื่อผู้เอาประกันภัย<span id="name"></span></span>
                            </td>
                            <td style="width: 80%;">
                                <span id="txtCustomer_fName">@ViewData["FirstName"] @ViewData["LastName"]</span>
                            </td>
                        </tr>
                        <tr style="height: 30px;">
                            <td style="width: 20%;color:gray">
                                <span style="margin: 5px">ที่อยู่ปัจจุบัน<span id="s_address"></span></span>
                            </td>
                            <td style="width: 80%;">
                                <span id="address">@ViewData["Address"]</span>
                            </td>
                        </tr>
                        <tr style="height: 30px;">
                            <td style="width: 20%;">
                                <span style="margin: 5px;color:gray">เพศ<span id="s_sex"></span></span>
                            </td>
                            <td style="width: 80%;">
                                <span id="sex">@ViewData["Sex"]</span>
                            </td>
                        </tr>
                        <tr style="height: 30px;">
                            <td style="width: 20%;color:gray">
                                <span style="margin: 5px">วัน/เดือน/ปี เกิด<span></span></span>
                            </td>
                            <td style="width: 80%;">
                                <span id="hbd">@ViewData["HBD"]</span>
                            </td>
                        </tr>
                        <tr style="height: 30px;">
                            <td style="width: 20%;">
                                <span style="margin: 5px;color:gray">อาชีพ<span id="s_occupation"></span></span>
                            </td>
                            <td style="width: 80%;">
                                <span id="occupation">@ViewData["Occupation"]</span>
                            </td>
                        </tr>
                    </table>
                    <table style="width: 90%; margin-left: 20px; margin-right: 20px; border-top: 1px solid gray;border-top-width: 2px;border-top-color: #eeeeee;">
                        <tr style="height: 50px;">
                            <td>
                                <span style="margin: 5px;color:gray">ระยะเวลาประกันภัย</span>
                            </td>
                            <td>
                                <span id="startCoverDate" style="color: gray">เริ่มวันที่&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</span><span>@ViewData["startCoverDate"]</span>
                            </td>
                            <td>
                                <span style="color: gray">สิ้นสุดวันที่&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</span><span id="endCoverDate">@ViewData["endCoverDate"]</span>
                            </td>
                            <td>
                                <span style="color: gray">เวลา&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</span><span>24:00 น.</span>
                            </td>
                        </tr>
                    </table>
                    @*<hr style="margin-left: 20px;border-width:2px;color:gray;width: 90%">*@
                    <table style=" width: 90%;
                    margin-left: 20px;
                    margin-right: 20px;
                    border-top: 1px solid gray;
                    border-top-width: 2px;
                    border-top-color: #eeeeee;
                    border-bottom: 1px solid gray;
                    border-bottom-width: 2px;
                    border-bottom-color: #eeeeee;">
                        <tr style="font-family: Kanit; border-bottom: 1px solid gray; border-bottom-width: 2px; border-bottom-color: #eeeeee; height: 50px;">
                            <td class="text-left" style="width: 40%;
                                border-right: 1px solid gray;
                                font-family: Kanit;
                                border-right-width: 2px;
                                border-right-color: #eeeeee;">
                                <span style="color: gray;font-size:16px;">ข้อตกลงความคุ้มครอง/เอกสารแนบท้าย</span>
                            </td>
                            <td class="text-center" style="width: 30%;
                        border-right: 1px solid gray;
                        border-right-width: 2px;
                        border-right-color: #eeeeee;">
                                <span style="color: gray;font-size:16px;">จำนวนเงินเอาประกันภัย (บาท)</span>
                            </td>
                            <td style="" class="text-center">
                                <span style="color: gray;font-size:16px;">เบี้ยประกันภัย (บาท)</span>
                            </td>
                        </tr>
                        <tr>
                            <td style="border-right: 1px solid gray;border-right-width: 2px;border-right-color: #eeeeee;height: 50px;">
                                <span style="margin-top:5px">
                                    1. ผลประโยชน์การเจ็บป่วยด้วยโรคติดเชื้อไวรัส
                                    โคโรนา 2019(COVID - 19)
                                </span>
                            </td>
                            <td class="text-center" style="border-right: 1px solid gray; border-right-width: 2px; border-right-color: #eeeeee;height: 50px;">
                                <span style="" id="maxCover">
                                    @ViewData["MaxCover"]
                                </span>
                            </td>
                        </tr>
                        <tr>
                            <td style="border-right: 1px solid gray; border-right-width: 2px; border-right-color: #eeeeee;">
                                <span style="">
                                    2. ผลประโยชน์การเสียชีวิต การสูญเสียอวัยวะ
                                    สายตาหรือทุพพลภาพถาวรสิ้นเชิง (อ.บ. 1)
                                </span>
                            </td>
                            <td class="text-center" style="border-right: 1px solid gray; border-right-width: 2px; border-right-color: #eeeeee;">
                                <span style="" id="maxCover2">
                                    @ViewData["MaxCover"]
                                </span>
                            </td>
                            <td class="text-center" style="height: 50px;">
                                <span style="">
                                </span>
                            </td>
                        </tr>
                    </table>
                    <br />
                    <table style=" width: 90%;
                    margin-left: 20px;
                    margin-right: 20px;
                   ">
                        <tr>
                            <td style="text-align: right;width: 70%">
                                <span style="color: gray">
                                    เบี้ยประกันภัยสุทธิ
                                </span>
                            </td>
                            <td style="text-align: right;width: 20%">
                                <span style="" id="premium">
                                    @ViewData["premium"]
                                </span>
                            </td>
                            <td style="text-align: right;width: 10%;">
                                <span style="">
                                    บาท
                                </span>
                            </td>
                        </tr>
                        <tr>
                            <td style="text-align: right;width: 70%">
                                <span style="color: gray">
                                    อากรแสตมป์
                                </span>
                            </td>
                            <td style="text-align: right;width: 20%">
                                <span style="">
                                    20
                                </span>
                            </td>
                            <td style="text-align: right;width: 10%;">
                                <span style="">
                                    บาท
                                </span>
                            </td>
                        </tr>
                        <tr>
                            <td style="text-align: right;width: 70%">
                                <span style="color: gray">
                                    ภาษี
                                </span>
                            </td>
                            <td style="text-align: right;width: 20%">
                                <span style="">
                                    -
                                </span>
                            </td>
                            <td style="text-align: right;width: 10%;">
                                <span style="">
                                    บาท
                                </span>
                            </td>
                        </tr>
                        <tr>
                            <td style="text-align: right;width: 70%">
                                <span style="color: gray">
                                    เบี้ยประกันรวม
                                </span>
                            </td>
                            <td style="text-align: right;width: 20%">
                                <span style="" id="sum">
                                    @ViewData["sum"]
                                </span>
                            </td>
                            <td style="text-align: right;width: 10%;">
                                <span style="">
                                    บาท
                                </span>
                            </td>
                        </tr>
                    </table>
                    <br />
                    <br />
                </div>
            </form>
        </div>
    </div>

    <input type="hidden" id="hd_appId" value="@ViewBag.appId" />
</body>

@section ViewSpecificJavascript
{
    <script type="text/javascript">
        $(function () {

            if ($('#hd_appId').val() == 0) {

                swal_fail("Document not fount", () => { window.close() })
            }

            $("#maxCover").inputmask({
                prefix: "",
                alias: "currency",
                digits: 0,
            });

            $("#maxCover2").inputmask({
                prefix: "",
                alias: "currency",
                digits: 0,
            });

            $("#premium").inputmask({
                prefix: "",
                alias: "currency",
                digits: 0,
            });

            $("#sum").inputmask({
                prefix: "",
                alias: "currency",
                digits: 0,
            });

        });
    </script>
}