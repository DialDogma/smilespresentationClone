@{
    ViewBag.Title = "รายงานสรุปเครดิตประจำเดือน";
}

<form id="formSMSPremium">
    <div class="box box-warning">
        <div class="box-body">
            <fieldset>
                <legend>ค้นหาข้อมูล</legend>
                <div class="form-group row">
                    <div class="col-sm-3">
                        <label class="control-label">วันเริ่มต้น :</label>
                        <input class="form-control" id="StartDate" name="StartDate" type="text" data-date-language="th-th" data-provide="datepicker" readonly="readonly" />
                    </div>
                    <div class="col-sm-3">
                        <label class="control-label">วันสิ้นสุด :</label>
                        <input class="form-control" id="EndDate" name="EndDate" type="text" data-date-language="th-th" data-provide="datepicker" readonly="readonly" />
                    </div>
                    <div class="col-sm-3" style="padding-top:27px;">
                        <button id="btnSearch" type="button" class="btn btn-primary"><i class="fa fa-search"></i> ค้นหา</button>
                    </div>
                    <div class="col-sm-3" style="padding-top:27px;">
                        <button id="btnExport" type="button" class="btn btn-default"><i class="fa fa-file"></i> Export</button>
                    </div>
                </div>
            </fieldset>
            <fieldset>
                <div class="form-group">
                    <table id="tableDetail" class="table table-bordered table-striped display responsive nowrap" style="width:100%"></table>
                </div>
            </fieldset>
        </div>
    </div>
</form>

@section ViewSpecificJavascript
{
    <script>
        $(function () {

            var date = new Date();

            $('#StartDate').datepicker({
                format: 'dd/mm/yyyy',
                autoclose: true
            }).datepicker('setDate', date);

            $('#EndDate').datepicker({
                format: 'dd/mm/yyyy',
                autoclose: true
            }).datepicker('setDate', date);

            //Click Search
            $('#btnSearch').on('click', function (e) {
                e.preventDefault();
                loadDatatables();
            });
            //Click Export
            $('#btnExport').on('click', function (e) {
                e.preventDefault();
                ExportReport();
            });
        });

        /*load datatables*/
        function loadDatatables() {
           $('#tableDetail').empty();
           const table = $('#tableDetail').DataTable({
               pageLength: 50,
               lengthChange: false,
               processing: true,
               serverSide: true,
               destroy: true,
               searching: false,
               ordering: true,
               info: false,
               paging: false,
               autoWidth: false,
               responsive: true,
                ajax: {
                    url: '@Url.Action("GetReportSentSMS")',
                    method: "POST",
                    data: function (d) {
                        d.draw = d.draw;
                        d.pageSize = d.length;
                        d.pageStart = d.start;
                        d.sortField = d.columns[d.order[0].column].data;
                        d.orderType = d.order[0].dir;
                        d.search = '';
                        d.dateFrom = $('#StartDate').val();
                        d.dateTo = $('#EndDate').val();
                    }
                },
               columns: [
                    {
                       title: 'xYearMonth',
                       data: 'xYearMonth',
                       orderable: true,
                    },
                    {
                        title: 'ProviderId',
                        data: 'ProviderId',
                        orderable: false,
                     },
                    {
                        title: 'Provider',
                        data: 'Provider',
                        orderable: false,
                    },
                    {
                        title: 'None',
                        data: 'None',
                        orderable: false,
                    },
                    {
                        title: 'Success',
                        data: 'Success',
                        orderable: false,
                   },
                   {
                       title: 'Fail',
                       data: 'Fail',
                       orderable: false,
                   },
                   {
                       title: 'Block',
                       data: 'Block',
                       orderable: false,
                   },
                   {
                       title: 'Expired',
                       data: 'Expired',
                       orderable: false,
                   },
                   {
                       title: 'Processing',
                       data: 'Processing',
                       orderable: false,
                   },
                   {
                       title: 'Unknown',
                       data: 'Unknown',
                       orderable: false,
                   },
                   {
                       title: 'Credit_None',
                       data: 'Credit_None',
                       orderable: false,
                   },
                   {
                       title: 'Credit_Success',
                       data: 'Credit_Success',
                       orderable: false,
                   },
                   {
                       title: 'Credit_Fail',
                       data: 'Credit_Fail',
                       orderable: false,
                   },
                   {
                       title: 'Credit_Block',
                       data: 'Credit_Block',
                       orderable: false,
                   },
                   {
                       title: 'Credit_Expired',
                       data: 'Credit_Expired',
                       orderable: false,
                   },
                   {
                       title: 'Credit_Processing',
                       data: 'Credit_Processing',
                       orderable: false,
                   },
                   {
                       title: 'Credit_Unknown',
                       data: 'Credit_Unknown',
                       orderable: false,
                   },
                ]
           });
             window.onresize = function () {
                table.columns.adjust().responsive.recalc();
            };

        }

        /*Export Excel*/
        function ExportReport() {
          loadingSpinner('fadeIn', 999999);
            $.ajax({
                url: "@Url.Action("ExportReportSentSMS")",
                type: "GET",
                data: {
                    dateFrom : $('#StartDate').val(),
                    dateTo :$('#EndDate').val()
                },
                success: function (data) {
                    window.location = "@Url.Action("DownloadExportReportSentSMS")";
                    loadingSpinner('fadeOut');
                },
                 error: function (jqXHR, exception) {
                    checkXHRStatus(jqXHR.status);
                 }
            });
        }
    </script>

}